<script>
    function showPage(num) {
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
        document.getElementById('page' + num).classList.add('active');
    }

    // GESTION SCAN ISBN
    function scanISBN() {
        const isbn = prompt("Visez le code-barres (Simulation) :");
        if(isbn) {
            alert("Livre d√©tect√© ! Ajout √† l'√©tag√®re...");
            // Logique pour colorer un livre vide ici
        }
    }

    // SYST√àME DE VIE (PLANTES & POUSSI√àRE)
    function checkVitals() {
        const last = localStorage.getItem('lastVisit') || Date.now();
        const diff = (Date.now() - last) / (1000 * 60 * 60 * 24); // Jours

        if(diff > 3) {
            document.documentElement.style.setProperty('--plant-health', 0.5);
            document.documentElement.style.setProperty('--dust-level', 0.3);
        }
        localStorage.setItem('lastVisit', Date.now());
    }

    window.onload = checkVitals;
</script>

