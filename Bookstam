<body>
    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="document.getElementById('imgUpload').click()"><svg viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg></div>
            <div class="tool-icon" onclick="openModal('paperModal')"><svg viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><path d="M14 2v6h6"/></svg></div>
            <div class="tool-icon" onclick="openModal('colorModal')"><svg viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0z"/></svg></div>
            <div class="tool-icon" onclick="resetAll()"><svg viewBox="0 0 24 24" width="20" fill="none" stroke="#e74c3c" stroke-width="2"><path d="M3 6h18m-2 0v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg></div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this, 'cover')">
        <input type="file" id="reviewImgUpload" hidden onchange="handleImage(this, 'review')">
        
        <div id="tabs-container"></div>
        <div class="tab review-tab" onclick="openModal('reviewModal')" id="txt-review-btn">REVIEW</div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">S≈çma Book</div>
            <input type="text" id="userName" placeholder="PR√âNOM ET NOM" onclick="event.stopPropagation()" oninput="save()" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 300px; background: transparent; outline:none;">
            <div class="lang-switch">
                <span onclick="setLang('FR'); event.stopPropagation();">FR</span>
                <span>-</span>
                <span onclick="setLang('EN'); event.stopPropagation();">EN</span>
            </div>
        </div>

        <div class="nav-zone" style="left:0" onclick="prevPage()">‚Üê <span id="txt-prev">RETOUR</span></div>
        <div class="nav-zone" style="right:0" onclick="nextPage()"><span id="txt-next">SUIVANT</span> ‚Üí</div>

        <div id="pages-slider"></div>

        <div id="playlist-box">
            <input type="text" id="musicUrl" placeholder="Lien Spotify / YouTube..." onchange="updatePlaylist(this.value)">
            <div id="player-container" style="margin-top:10px;"></div>
        </div>
    </div>

    <div id="reviewModal" class="modal" style="width: 80vw; max-width: 600px;">
        <div class="review-grid">
            <div class="review-left">
                <div class="review-photo-box" id="review-img-box" onclick="document.getElementById('reviewImgUpload').click()">üì∑</div>
                <div style="margin-top:15px; font-size:12px;" id="txt-format">Format:</div>
                <div style="display:flex; gap:10px; margin-top:5px;">
                    <label><input type="checkbox" class="book-type" onclick="toggleType(this)"> <span id="txt-b1">Livre</span></label>
                    <label><input type="checkbox" class="book-type" onclick="toggleType(this)"> <span id="txt-b2">E-Book</span></label>
                </div>
            </div>
            <div class="review-right">
                <input type="text" class="review-input" id="rev-title" placeholder="TITRE">
                <input type="text" class="review-input" id="rev-author" placeholder="AUTEUR">
                <div class="stars" id="main-stars" onclick="handleStars(event, 'main')">‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ</div>
                <textarea class="review-input" id="rev-summary" style="height:100px; margin-top:10px;" placeholder="R√âSUM√â & AVIS"></textarea>
                <div style="font-size:10px; margin-top:10px;" id="txt-rating">NOTE D√âTAILL√âE :</div>
                <div style="display:grid; grid-template-columns: 1fr 1fr; font-size:11px;">
                    <span>Style:</span> <span class="stars" onclick="handleStars(event, 'style')">‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ</span>
                    <span>Contenu:</span> <span class="stars" onclick="handleStars(event, 'content')">‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ</span>
                </div>
            </div>
        </div>
        <button onclick="closeModals()" style="width:100%; margin-top:20px; padding:10px; border:none; background:#333; color:white; border-radius:5px;">OK</button>
    </div>

    <div id="paperModal" class="modal">
        <p style="font-size:11px; font-weight:bold;">PAPIER</p>
        <button onclick="changePaper('paper-lined')" style="width:100%; margin-bottom:5px;">Lign√©</button>
        <button onclick="changePaper('paper-blank')" style="width:100%;">Uni</button>
    </div>

    <div id="colorModal" class="modal">
        <p id="txt-color-title" style="font-size:11px; font-weight:bold;">COULEURS</p>
        <div style="display:flex; gap:5px; margin-bottom:10px;">
            <button onclick="targetCol='tab'">Onglet</button>
            <button onclick="targetCol='paper'">Page</button>
        </div>
        <div id="palette" style="display:grid; grid-template-columns:repeat(8,1fr); gap:5px;"></div>
    </div>

    <script>
        const translations = {
            FR: { review: "REVIEW", prev: "RETOUR", next: "SUIVANT", b1: "Livre", b2: "E-Book", rating: "NOTE D√âTAILL√âE", color: "PERSONNALISATION", format: "FORMAT :" },
            EN: { review: "REVIEW", prev: "BACK", next: "NEXT", b1: "Book", b2: "E-Book", rating: "DETAILED RATING", color: "CUSTOMIZE", format: "FORMAT :" }
        };

        let db = JSON.parse(localStorage.getItem('soma_pro_db')) || {
            lang: 'FR',
            userName: '',
            pages: [{ color: "#E1E3E3", content: "Ma premi√®re page...", paper: "paper-lined", paperColor: "#ffffff" }],
            review: { img: '', title: '', author: '', summary: '', mainStar: 0, styleStar: 0, contentStar: 0, types: [] },
            playlist: ''
        };

        let currentIdx = 0;
        let targetCol = 'tab';

        function setLang(l) {
            db.lang = l;
            document.getElementById('txt-review-btn').textContent = translations[l].review;
            document.getElementById('txt-prev').textContent = translations[l].prev;
            document.getElementById('txt-next').textContent = translations[l].next;
            document.getElementById('txt-b1').textContent = translations[l].b1;
            document.getElementById('txt-b2').textContent = translations[l].b2;
            document.getElementById('txt-rating').textContent = translations[l].rating;
            document.getElementById('rev-title').placeholder = (l==='FR'?'TITRE':'TITLE');
            save();
        }

        function handleStars(e, type) {
            if (e.target.tagName !== 'SPAN') {
                let stars = e.currentTarget.innerText;
                let rect = e.currentTarget.getBoundingClientRect();
                let x = e.clientX - rect.left;
                let count = Math.ceil((x / rect.width) * 5);
                let str = "‚òÖ".repeat(count) + "‚òÜ".repeat(5-count);
                e.currentTarget.innerHTML = `<span class="active">${"‚òÖ".repeat(count)}</span>${"‚òÜ".repeat(5-count)}`;
                if(type === 'main') db.review.mainStar = count;
                save();
            }
        }

        function updatePlaylist(url) {
            const container = document.getElementById('player-container');
            if(url.includes('spotify')) {
                let id = url.split('playlist/')[1]?.split('?')[0];
                container.innerHTML = `<iframe src="https://open.spotify.com/embed/playlist/${id}" width="100%" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>`;
            } else if(url.includes('youtube')) {
                let id = url.split('v=')[1]?.split('&')[0];
                container.innerHTML = `<iframe width="100%" height="80" src="https://www.youtube.com/embed/${id}" frameborder="0" allowfullscreen></iframe>`;
            }
            db.playlist = url;
            save();
        }

        function openBook() { document.getElementById('cover').classList.add('opened'); render(); }
        function nextPage() { 
            if(currentIdx < db.pages.length-1) currentIdx++; 
            else db.pages.push({color:"#eee", content:"", paper:"paper-lined", paperColor:"#fff"});
            render(); 
        }
        function prevPage() { if(currentIdx > 0) currentIdx--; else document.getElementById('cover').classList.remove('opened'); render(); }

        function handleImage(input, target) {
            const reader = new FileReader();
            reader.onload = e => {
                if(target === 'cover') {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    db.coverImg = e.target.result;
                } else {
                    document.getElementById('review-img-box').style.backgroundImage = `url(${e.target.result})`;
                    document.getElementById('review-img-box').textContent = '';
                    db.review.img = e.target.result;
                }
                save();
            };
            reader.readAsDataURL(input.files[0]);
        }

        function render() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = '';
            db.pages.forEach((p, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${p.paper}`;
                div.style.backgroundColor = p.paperColor;
                div.contentEditable = true;
                div.innerHTML = p.content;
                div.oninput = () => { db.pages[i].content = div.innerHTML; save(); };
                slider.appendChild(div);
            });
            slider.style.transform = `translateX(-${currentIdx*100}vw)`;
            
            const tabs = document.getElementById('tabs-container');
            tabs.innerHTML = '';
            db.pages.forEach((p, i) => {
                const t = document.createElement('div');
                t.className = `tab ${i < currentIdx ? 'hidden-left' : ''}`;
                t.style.background = p.color;
                t.textContent = i + 1;
                t.onclick = () => { currentIdx = i; render(); };
                tabs.appendChild(t);
            });
        }

        function save() { 
            db.userName = document.getElementById('userName').value;
            db.review.title = document.getElementById('rev-title').value;
            db.review.summary = document.getElementById('rev-summary').value;
            localStorage.setItem('soma_pro_db', JSON.stringify(db)); 
        }

        function resetAll() { if(confirm("Tout effacer ?")) { localStorage.clear(); location.reload(); } }
        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        // Init Palette
        const colors = ["#FDFBF7","#E1E3E3","#DFD8D5","#E6D4C4","#BAB1B0","#C3CED1","#B1A6A6","#D5C7B3","#E2D7D4","#B0A19F","#D0CFCD","#E9F0F0","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#F6F2F0","#D4C1BA"];
        colors.forEach(c => {
            const d = document.createElement('div');
            d.style.background = c; d.style.height = "25px"; d.style.borderRadius = "3px"; d.style.cursor = "pointer";
            d.onclick = () => {
                if(targetCol === 'tab') db.pages[currentIdx].color = c;
                else db.pages[currentIdx].paperColor = c;
                render(); save(); closeModals();
            };
            document.getElementById('palette').appendChild(d);
        });

        window.onload = () => {
            document.getElementById('userName').value = db.userName || '';
            if(db.coverImg) document.getElementById('cover').style.backgroundImage = `url(${db.coverImg})`;
            if(db.review.img) {
                document.getElementById('review-img-box').style.backgroundImage = `url(${db.review.img})`;
                document.getElementById('review-img-box').textContent = '';
            }
            if(db.playlist) {
                document.getElementById('musicUrl').value = db.playlist;
                updatePlaylist(db.playlist);
            }
            setLang(db.lang);
            render();
        };
    </script>
</body>
</html>
