        .grain { position: fixed; inset: 0; pointer-events: none; z-index: 9999; opacity: 0.04; background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E"); }
        
        #book-wrapper { width: 100vw; height: 100vh; background: var(--page-color); position: relative; overflow: hidden; }
        
        /* COUVERTURE */
        #cover { position: absolute; inset: 0; background-color: var(--cover-bg); z-index: 1000; display: flex; flex-direction: column; align-items: center; justify-content: space-between; padding: 10% 20px; transition: transform 0.8s cubic-bezier(0.645, 0.045, 0.355, 1); cursor: pointer; background-size: cover; background-position: center; }
        #cover.opened { transform: translateX(-100%); }
        .lang-switch { position: absolute; bottom: 30px; display: flex; gap: 15px; font-size: 12px; letter-spacing: 2px; font-weight: bold; }

        /* NAVIGATION & TABS */
        #tabs-container { position: absolute; right: 0; top: 80px; display: flex; flex-direction: column; gap: 2px; z-index: 2; }
        .tab { width: 45px; height: 50px; border-radius: 8px 0 0 8px; cursor: pointer; transition: 0.4s; display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: bold; box-shadow: -2px 2px 5px rgba(0,0,0,0.1); }
        .tab.review-tab { position: absolute; top: 20px; right: 0; background: #333; color: white; width: 80px; height: 35px; border-radius: 5px 0 0 5px; }
        .tab.hidden-left { transform: translateX(60px); opacity: 0; }

        #pages-slider { width: 100%; height: 100%; display: flex; transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
        .page-surface { min-width: 100vw; height: 100vh; box-sizing: border-box; padding: 100px 15% 40px 15%; position: relative; outline: none; overflow-y: auto; }

        /* REVIEW FORM STYLES */
        .review-grid { display: grid; grid-template-columns: 1fr 2fr; gap: 20px; text-align: left; }
        .review-photo-box { width: 100%; aspect-ratio: 3/4; border: 2px dashed #ccc; display: flex; align-items: center; justify-content: center; cursor: pointer; background-size: cover; background-position: center; }
        .stars { color: #ccc; cursor: pointer; font-size: 20px; }
        .stars .active { color: var(--accent); }
        .review-input { border: none; border-bottom: 1px solid #eee; width: 100%; padding: 5px 0; margin-bottom: 10px; font-family: inherit; outline: none; background: transparent; }
        
        /* PLAYLIST WIDGET */
        #playlist-box { position: absolute; bottom: 20px; left: 20px; z-index: 100; width: 250px; }
        #playlist-box input { width: 100%; font-size: 10px; padding: 5px; border-radius: 5px; border: 1px solid #ddd; opacity: 0.5; }
        #playlist-box input:focus { opacity: 1; }

        /* UI ELEMENTS */
        .toolbar-top { position: absolute; top: 25px; right: 100px; display: flex; gap: 20px; z-index: 1100; }
        .tool-icon { cursor: pointer; opacity: 0.6; }
        .nav-zone { position: absolute; top: 0; bottom: 0; width: 80px; z-index: 100; cursor: pointer; opacity: 0.1; transition: 0.3s; display: flex; align-items: center; justify-content: center; writing-mode: vertical-rl; }
        .nav-zone:hover { opacity: 0.6; background: rgba(0,0,0,0.02); }
        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 20px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.2); z-index: 10000; backdrop-filter: blur(4px); }
        .paper-lined { background-image: repeating-linear-gradient(transparent 0px, transparent 31px, rgba(0,0,0,0.05) 32px); }
