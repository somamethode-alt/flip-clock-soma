            <div class="user-info" onclick="event.stopPropagation()">
                <input type="text" id="userName" placeholder="PRÉNOM ET NOM" style="border-bottom: 1px solid #000; text-align: center; padding: 10px; font-size: 16px; width: 280px; text-transform: uppercase; letter-spacing: 2px;">
