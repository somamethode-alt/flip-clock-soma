    <script>
        const pastelColors = ["#E1E3E3", "#DFD8D5", "#D8D5D2", "#E6D4C4", "#BAB1B0", "#898684", "#F2F8F8", "#C3CED1", "#B1A6A6", "#B0AEB4", "#A2A09A", "#6F6869", "#E8E7E7", "#EEE9E9", "#D5C7B3", "#E2D7D4", "#B0A19F", "#C09D89", "#D0CFCD", "#E9F0F0", "#E4DDD4", "#B1B6AF", "#D7D8D2", "#B6AD9E", "#DFE5E5", "#E4E9EC", "#B8BFBA", "#8F877F", "#859A9E", "#BDD2E0", "#F8FCFD", "#E9EDEE", "#CFCFD4", "#E2DFD7", "#E2D5D5", "#DED0C7", "#F6F2F0", "#D4C1BA", "#D0C9CB", "#C1B2B1"];

        let candidatures = JSON.parse(localStorage.getItem('soma_prospection_v10')) || [];

        function openBook() { 
            document.getElementById('cover').classList.add('opened'); 
            document.getElementById('main-content').classList.add('visible');
        }
        function closeBook() { 
            document.getElementById('cover').classList.remove('opened'); 
            document.getElementById('main-content').classList.remove('visible');
        }

        function openModal(id) {
            document.getElementById(id).style.display = 'block';
            document.getElementById('overlay').style.display = 'block';
        }
        function closeAllModals() {
            document.querySelectorAll('.modal').forEach(m => m.style.display = 'none');
            document.getElementById('overlay').style.display = 'none';
        }

        // Changement de la teinte (couleur de fond)
        const grid = document.getElementById('paletteGrid');
        pastelColors.forEach(color => {
            const dot = document.createElement('div');
            dot.className = 'color-dot';
            dot.style.background = color;
            dot.onclick = () => {
                document.documentElement.style.setProperty('--main-bg', color);
                localStorage.setItem('soma_color_v10', color);
                closeAllModals();
            };
            grid.appendChild(dot);
        });

        // Changement du style de papier (motifs)
        function setPaperStyle(style) {
            document.getElementById('main-content').className = 'visible ' + style;
            localStorage.setItem('soma_paper_style_v10', style);
            closeAllModals();
        }

        function addRow() {
            candidatures.push({ id: Date.now(), nom: "", lieu: "", date: "", reponse: "Attente" });
            render();
        }

        function render() {
            const body = document.getElementById('tableBody');
            body.innerHTML = "";
            candidatures.forEach((c, i) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td><input type="text" value="${c.nom}" oninput="update(${i}, 'nom', this.value)" placeholder="Nom..."></td>
                    <td><input type="text" value="${c.lieu}" oninput="update(${i}, 'lieu', this.value)" placeholder="Ville..."></td>
                    <td><input type="date" value="${c.date}" onchange="update(${i}, 'date', this.value)"></td>
                    <td style="font-size:12px; opacity:0.8">${calculateRelance(c.date)}</td>
                    <td>
                        <select onchange="update(${i}, 'reponse', this.value)" style="border:none; background:transparent; font-family:inherit; font-size:12px; font-weight:600;">
                            <option value="Attente" ${c.reponse==='Attente'?'selected':''}>Attente</option>
                            <option value="Oui" ${c.reponse==='Oui'?'selected':''}>OUI</option>
                            <option value="Non" ${c.reponse==='Non'?'selected':''}>NON</option>
                        </select>
                    </td>
                `;
                body.appendChild(row);
            });
        }

        function update(i, k, v) { 
            candidatures[i][k] = v; 
            localStorage.setItem('soma_prospection_v10', JSON.stringify(candidatures));
        }

        function calculateRelance(d) {
            if(!d) return "-";
            let date = new Date(d);
            date.setDate(date.getDate() + 10);
            return date.toLocaleDateString('fr-FR');
        }

        // Chargement des préférences utilisateur
        const savedColor = localStorage.getItem('soma_color_v10');
        if(savedColor) document.documentElement.style.setProperty('--main-bg', savedColor);
        
        const savedStyle = localStorage.getItem('soma_paper_style_v10');
        if(savedStyle) setPaperStyle(savedStyle);

        render();
    </script>
</body>
</html>
