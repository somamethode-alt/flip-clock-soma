<script>
   function ajouterAuRegistre() {
       const soin = document.getElementById('soin').value;
       const soignant = document.getElementById('soignant').value;
       const sem = document.getElementById('semaine').value;
       if(soin && soignant) {
           const li = document.createElement('li');
           li.innerHTML = `<strong>${sem}</strong> : ${soin} (Vu par : ${soignant})`;
           document.getElementById('liste-soins').appendChild(li);
       }
   }

   function genererSynthese() {
       const intros = ["Tout au long de cette p√©riode, ", "En situation de stage, ", "Dans le cadre de mon apprentissage, "];
       const verbe = document.getElementById('verbe').value;
       const fins = [" l'accompagnement global de l'enfant.", " la mise en place des protocoles d'hygi√®ne.", " la communication avec l'√©quipe pluridisciplinaire."];

       // M√©lange al√©atoire
       const phrase = intros[Math.floor(Math.random() * intros.length)] +
                      verbe +
                      fins[Math.floor(Math.random() * fins.length)];

       document.getElementById('resultat-synthese').innerText = phrase;
   }
</script>

