            --accent: #2d3436;
        }

        /* Thèmes prédéfinis */
        .theme-ciel { --header-bg: #c5d1d8; --accent: #4a69bd; }
        .theme-cafe { --header-bg: #e8d8c3; --accent: #8d6e63; }
        .theme-menthe { --header-bg: #cfd8bd; --accent: #6b8e23; }

        body { 
            font-family: 'Inter', -apple-system, sans-serif; 
            background-color: var(--bg-color); 
