<script>
function updateClock() {
    const now = new Date();
    document.getElementById('h-val').textContent = String(now.getHours()).padStart(2, '0');
    document.getElementById('m-val').textContent = String(now.getMinutes()).padStart(2, '0');
    document.getElementById('s-val').textContent = String(now.getSeconds()).padStart(2, '0');
}

function changeColor(bg, text) {
    document.documentElement.style.setProperty('--widget-bg', bg);
    document.documentElement.style.setProperty('--widget-text', text);
}

setInterval(updateClock, 1000);
updateClock();
</script>
