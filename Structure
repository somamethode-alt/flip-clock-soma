<body>
    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="document.getElementById('imgUpload').click()">
                <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg>
                <span>Image</span>
            </div>
            <div class="tool-icon" onclick="openModal('paperModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><path d="M14 2v6h6"/></svg>
                <span>Papier</span>
            </div>
            <div class="tool-icon" onclick="openModal('colorModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                <span>Couleurs</span>
            </div>
            <div class="tool-icon" onclick="resetCurrentPage()" style="color: #e74c3c;">
                <svg viewBox="0 0 24 24" fill="none" stroke="#e74c3c" stroke-width="2"><path d="M3 6h18m-2 0v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                <span>Reset</span>
            </div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this)">
        <div id="tabs-container"></div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">Sōma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" placeholder="PRÉNOM ET NOM" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 350px; background: transparent; letter-spacing: 5px; text-transform: uppercase; outline:none;">
            </div>
            <div style="font-size: 32px; letter-spacing: 15px; font-weight: 300;">SŌMA</div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()">← Revenir</div>
        <div class="nav-zone nav-next" onclick="nextPage()">Tourner la page →</div>

        <div id="pages-slider">
            </div>
    </div>

    <div id="paperModal" class="modal">
        <p style="font-size: 11px; font-weight: bold;">STYLE DE PAPIER</p>
        <div style="display:grid; grid-template-columns: 1fr; gap: 8px;">
            <button onclick="changePaper('paper-lined')">Ligné Classique</button>
            <button onclick="changePaper('paper-grid')">Petit Carreaux</button>
            <button onclick="changePaper('paper-dots')">Pointillés</button>
            <button onclick="changePaper('paper-blank')">Uni Minimaliste</button>
        </div>
    </div>

    <div id="colorModal" class="modal">
        <p style="font-size: 11px; font-weight: bold;">PERSONNALISATION</p>
        <button onclick="targetColor='cover'" style="width:100%; margin-bottom:10px;">Couleur Couverture</button>
        <div class="palette-grid" id="paletteGrid"></div>
    </div>

    <script>
        const colors = ["#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        
        let tabsData = JSON.parse(localStorage.getItem('soma_v3')) || [
            { color: "#E1E3E3", content: "Page 1...", paper: "paper-lined" },
            { color: "#DFD8D5", content: "Page 2...", paper: "paper-lined" }
        ];
        let currentIdx = 0;
        let targetColor = 'tab';

        function openBook() { 
            document.getElementById('cover').classList.add('opened'); 
            initBook();
        }

        function initBook() {
            renderPages();
            updateNavigation();
        }

        function renderPages() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = "";
            tabsData.forEach((page, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${page.paper}`;
                div.contentEditable = true;
                div.innerHTML = page.content;
                div.oninput = () => { tabsData[i].content = div.innerHTML; save(); };
                slider.appendChild(div);
            });

            const container = document.getElementById('tabs-container');
            container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div");
                el.className = "tab";
                el.style.background = t.color;
                el.textContent = i + 1;
                el.onclick = () => goToPage(i);
                container.appendChild(el);
            });
        }

        function updateNavigation() {
            // Effet slide
            document.getElementById('pages-slider').style.transform = `translateX(-${currentIdx * 100}vw)`;
            
            // Gestion des onglets (Effet photo : les anciens disparaissent)
            const allTabs = document.querySelectorAll('.tab');
            allTabs.forEach((tab, i) => {
                if (i < currentIdx) {
                    tab.classList.add('hidden-left');
                } else {
                    tab.classList.remove('hidden-left');
                }
            });
        }

        function nextPage() {
            if (currentIdx < tabsData.length - 1) {
                currentIdx++;
            } else {
                // Créer une nouvelle page si on est à la fin
                tabsData.push({ color: colors[Math.floor(Math.random()*colors.length)], content: "", paper: "paper-lined" });
                renderPages();
                currentIdx++;
            }
            updateNavigation();
            save();
        }

        function prevPage() {
            if (currentIdx > 0) {
                currentIdx--;
                updateNavigation();
            }
        }

        function goToPage(i) {
            currentIdx = i;
            updateNavigation();
        }

        function changePaper(style) {
            tabsData[currentIdx].paper = style;
            renderPages();
            updateNavigation();
            closeModals();
            save();
        }

        function resetCurrentPage() {
            if(confirm("Effacer le contenu ?")) {
                tabsData[currentIdx].content = "";
                renderPages();
                updateNavigation();
                save();
            }
        }

        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        // Palette 40 couleurs
        const grid = document.getElementById('paletteGrid');
        colors.forEach(c => {
            const d = document.createElement('div');
            d.className = 'color-dot'; d.style.background = c;
            d.onclick = () => {
                if(targetColor === 'cover') {
                    document.getElementById('cover').style.backgroundColor = c;
                    document.getElementById('cover').style.backgroundImage = 'none';
                    localStorage.setItem('soma_c_bg', c);
                } else {
                    tabsData[currentIdx].color = c;
                    renderPages();
                    updateNavigation();
                }
                closeModals();
                targetColor = 'tab';
                save();
            };
            grid.appendChild(d);
        });

        function handleImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    localStorage.setItem('soma_c_img', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function save() { localStorage.setItem('soma_v3', JSON.stringify(tabsData)); }

        window.onload = () => {
            const img = localStorage.getItem('soma_c_img');
            if(img) document.getElementById('cover').style.backgroundImage = `url(${img})`;
            const col = localStorage.getItem('soma_c_bg');
            if(col) document.getElementById('cover').style.backgroundColor = col;
            initBook();
        };
    </script>
</body>
</html>
