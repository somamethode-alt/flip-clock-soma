    <style>
        :root { --cover-bg: #E1E3E3; }

        body, html { 
            margin: 0; padding: 0; width: 100%; height: 100%; 
            font-family: 'Inter', sans-serif; background-color: #f0f0f0; 
            overflow: hidden; display: flex; justify-content: center; align-items: center;
        }

        .grain { position: fixed; inset: 0; pointer-events: none; z-index: 9999; opacity: 0.04; background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E"); }

        #book-wrapper {
            width: 100vw; height: 100vh;
            background: white; position: relative;
            overflow: hidden;
        }

        /* --- COUVERTURE --- */
        #cover { 
            position: absolute; inset: 0; background-color: var(--cover-bg); 
            z-index: 1000; display: flex; flex-direction: column; align-items: center; justify-content: space-between; 
            padding: 10% 20px; transition: transform 1s cubic-bezier(0.645, 0.045, 0.355, 1);
            cursor: pointer; background-size: cover;
        }
        #cover.opened { transform: translateX(-100%); }

        /* --- ONGLETS DYNAMIQUES (Masquage intelligent) --- */
        #tabs-container { 
            position: absolute; right: 0; top: 60px; 
            display: flex; flex-direction: column; gap: 2px; z-index: 2; 
            transition: 0.5s;
        }
        .tab { 
            width: 45px; height: 50px; border-radius: 8px 0 0 8px; 
            cursor: pointer; transition: transform 0.4s ease, opacity 0.4s; 
            display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: bold;
            box-shadow: -2px 2px 5px rgba(0,0,0,0.1);
        }
        .tab.hidden-left { transform: translateX(60px); opacity: 0; pointer-events: none; }

        /* --- CONTENEUR DE PAGES POUR EFFET TOURNER --- */
        #pages-slider {
            width: 100%; height: 100%;
            display: flex; transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .page-surface {
            min-width: 100vw; height: 100vh;
            box-sizing: border-box; padding: 80px 15% 40px 10%;
            position: relative; outline: none;
        }

        /* --- BOUTONS DE NAVIGATION --- */
        .nav-zone {
            position: absolute; top: 0; bottom: 0; width: 100px;
            display: flex; align-items: center; justify-content: center;
            z-index: 100; cursor: pointer; transition: 0.3s;
            writing-mode: vertical-rl; text-transform: uppercase; font-size: 10px;
            letter-spacing: 4px; font-weight: 600; opacity: 0.2;
        }
        .nav-zone:hover { opacity: 1; background: rgba(0,0,0,0.02); }
        .nav-next { right: 0; }
        .nav-prev { left: 0; transform: rotate(180deg); }

        /* --- BARRE D'OUTILS --- */
        .toolbar-top {
            position: absolute; top: 20px; right: 60px;
            display: flex; gap: 20px; z-index: 1100;
        }
        .tool-icon { text-align: center; cursor: pointer; opacity: 0.6; font-size: 9px; font-weight: bold; }
        .tool-icon svg { display: block; margin: 0 auto 4px; width: 18px; height: 18px; }

        /* --- PAPIERS --- */
        .paper-lined { background: repeating-linear-gradient(transparent 0px, transparent 31px, #e8e8e8 32px); }
        .paper-grid { background-image: linear-gradient(#eee 1px, transparent 1px), linear-gradient(90deg,#eee 1px, transparent 1px); background-size:30px 30px; }
        .paper-dots { background-image: radial-gradient(#bbb 1px, transparent 1px); background-size:25px 25px; }
        .paper-blank { background-color: white; }

        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 15px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.3); z-index: 10000; backdrop-filter: blur(4px); }
        .palette-grid { display: grid; grid-template-columns: repeat(8, 1fr); gap: 5px; margin-top: 15px; }
        .color-dot { width: 100%; aspect-ratio: 1; border-radius: 3px; cursor: pointer; }
