    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="document.getElementById('imgUpload').click()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg>
                <span>Image</span>
            </div>
            <div class="tool-icon" onclick="openModal('paperModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><path d="M14 2v6h6"/></svg>
                <span>Page</span>
            </div>
            <div class="tool-icon" onclick="openModal('colorModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l9 4.9V17L12 22l-9-4.9V7z"/></svg>
                <span>Couleurs</span>
            </div>
            <div class="tool-icon" onclick="resetPage()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18m-2 0v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/></svg>
                <span>Reset</span>
            </div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this)">

        <div id="tabs-container"></div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">Sōma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" placeholder="NOM DE L'AUTEUR" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 350px; background: transparent; letter-spacing: 5px; text-transform: uppercase; outline:none;">
            </div>
            <div style="font-size: 32px; letter-spacing: 15px; font-weight: 300;">SŌMA</div>
        </div>

        <div id="main-content">
            <div id="editor" contenteditable="true">Commencez votre récit ici...</div>
            <div class="page-turner" onclick="addPage()">Tourner la page →</div>
        </div>
    </div>

    <div id="paperModal" class="modal">
        <p style="font-size: 11px; font-weight: bold; text-transform: uppercase;">Style de Page</p>
        <div style="display:grid; grid-template-columns: 1fr 1fr; gap: 10px;">
            <button onclick="changePaper('paper-lined')">Lignes</button>
            <button onclick="changePaper('paper-grid')">Grille</button>
            <button onclick="changePaper('paper-dots')">Points</button>
            <button onclick="changePaper('paper-vintage')">Vintage</button>
            <button onclick="changePaper('paper-architect')">Technique</button>
            <button onclick="changePaper('paper-blank')">Blanc</button>
            <button onclick="changePaper('paper-planner')">Planner</button>
            <button onclick="changePaper('paper-texture')">Texture</button>
        </div>
    </div>

    <div id="colorModal" class="modal">
        <p style="font-size: 11px; font-weight: bold; text-transform: uppercase;">Couleurs Onglets / Couverture</p>
        <button onclick="targetColor='cover'" style="width:100%; margin-bottom:10px;">Changer Couleur Couverture</button>
        <div class="palette-grid" id="paletteGrid"></div>
    </div>

    <script>
        const colors = ["#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        
        let tabsData = JSON.parse(localStorage.getItem('soma_pro_tabs')) || [{ color: "#E1E3E3", content: "Page 1", paper: "paper-lined" }];
        let currentIdx = 0;
        let targetColor = 'tab';

        function openBook() { 
            document.getElementById('cover').classList.add('opened'); 
            document.getElementById('main-content').classList.add('visible');
            renderTabs();
        }

        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        function renderTabs() {
            const container = document.getElementById('tabs-container');
            container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div");
                el.className = "tab";
                el.style.background = t.color;
                el.textContent = i + 1;
                el.onclick = () => selectTab(i);
                container.appendChild(el);
            });
        }

        function selectTab(i) {
            saveCurrent();
            currentIdx = i;
            const page = tabsData[i];
            document.getElementById('editor').innerHTML = page.content;
            document.getElementById('main-content').className = "visible " + page.paper;
            renderTabs();
        }

        function addPage() {
            saveCurrent();
            tabsData.push({ color: colors[Math.floor(Math.random()*colors.length)], content: "Nouvelle Page...", paper: "paper-lined" });
            selectTab(tabsData.length - 1);
        }

        function changePaper(style) {
            tabsData[currentIdx].paper = style;
            document.getElementById('main-content').className = "visible " + style;
            closeModals();
            saveCurrent();
        }

        function resetPage() {
            if(confirm("Effacer cette page ?")) {
                document.getElementById('editor').innerHTML = "";
                saveCurrent();
            }
        }

        function handleImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    localStorage.setItem('soma_cover_custom', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Palette 40 couleurs
        const grid = document.getElementById('paletteGrid');
        colors.forEach(c => {
            const d = document.createElement('div');
            d.className = 'color-dot'; d.style.background = c;
            d.onclick = () => {
                if(targetColor === 'cover') {
                    document.getElementById('cover').style.backgroundColor = c;
                    document.getElementById('cover').style.backgroundImage = 'none';
                    localStorage.setItem('soma_cover_color', c);
                } else {
                    tabsData[currentIdx].color = c;
                    renderTabs();
                }
                closeModals();
                targetColor = 'tab';
                saveCurrent();
            };
            grid.appendChild(d);
        });

        function saveCurrent() {
            tabsData[currentIdx].content = document.getElementById('editor').innerHTML;
            localStorage.setItem('soma_pro_tabs', JSON.stringify(tabsData));
            localStorage.setItem('soma_author', document.getElementById('userName').value);
        }

        document.getElementById('editor').oninput = saveCurrent;
        document.getElementById('userName').oninput = saveCurrent;

        window.onload = () => {
            const author = localStorage.getItem('soma_author');
            if(author) document.getElementById('userName').value = author;
            const customCover = localStorage.getItem('soma_cover_custom');
            if(customCover) document.getElementById('cover').style.backgroundImage = `url(${customCover})`;
            const coverColor = localStorage.getItem('soma_cover_color');
            if(coverColor) document.getElementById('cover').style.backgroundColor = coverColor;
            
            // On démarre sur la page 1 chargée
            document.getElementById('editor').innerHTML = tabsData[0].content;
            document.getElementById('main-content').className = "visible " + tabsData[0].paper;
        };
    </script>
</body>
</html>
