        /* --- NAVIGATION --- */
        .nav-zone { position: absolute; top: 0; bottom: 0; width: 80px; display: flex; align-items: center; justify-content: center; z-index: 100; cursor: pointer; opacity: 0.1; transition: 0.3s; writing-mode: vertical-rl; text-transform: uppercase; font-size: 10px; letter-spacing: 4px; font-weight: 600; }
        .nav-zone:hover { opacity: 0.6; background: rgba(0,0,0,0.02); }
        .nav-next { right: 0; } .nav-prev { left: 0; transform: rotate(180deg); }

        /* --- TOOLBAR --- */
        .toolbar-top { position: absolute; top: 25px; right: 60px; display: flex; gap: 20px; z-index: 1100; }
        .tool-icon { cursor: pointer; opacity: 0.6; transition: 0.3s; display: flex; align-items: center; justify-content: center; }
        .tool-icon:hover { opacity: 1; transform: scale(1.1); }
        .tool-icon svg { width: 22px; height: 22px; stroke: #333; }

        /* --- WIDGET REVIEW --- */
        .review-card { border: 1px solid #333; padding: 25px; background: #fff; max-width: 800px; margin: 20px auto; color: var(--review-text); position: relative; z-index: 1; }
        .rev-top-section { display: grid; grid-template-columns: 180px 1fr; gap: 30px; }
        .rev-photo-box { width: 180px; height: 250px; border: 1px solid #eee; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #ccc; cursor: pointer; background-size: cover; background-position: center; }
        .rev-field { border-bottom: 1px solid #f0f0f0; display: flex; align-items: baseline; gap: 10px; padding: 8px 0; }
        .rev-label { font-size: 9px; font-weight: 800; text-transform: uppercase; letter-spacing: 1px; min-width: 85px; }
        .rev-input { border: none; outline: none; flex: 1; font-family: 'Inter'; font-size: 13px; background: transparent; }
        .rev-rating-area { margin-top: 15px; cursor: pointer; font-size: 26px; user-select: none; display: inline-block; min-width: 150px; }
        .rev-rating-area span.active { color: #f1c40f; }

        /* Notification iMessage */
        .imessage-notif {
            background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(15px);
            border-radius: 18px; padding: 14px; margin-bottom: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08); border: 1px solid rgba(255,255,255,0.4);
            animation: slideIn 0.5s ease; cursor: pointer; transition: 0.3s;
        }
        .imessage-notif:active { transform: scale(0.95); }
        .imessage-header { display: flex; justify-content: space-between; font-size: 10px; color: #666; font-weight: 700; margin-bottom: 4px; }
        .imessage-body { font-size: 13px; color: #000; line-height: 1.4; margin-bottom: 4px; }
        .imessage-footer { font-size: 10px; color: #888; border-top: 0.5px solid rgba(0,0,0,0.05); padding-top: 4px; font-style: italic; }

        @keyframes slideIn { from { transform: translateY(-20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        /* Modals */
        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 20px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.2); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.1); z-index: 10000; backdrop-filter: blur(2px); }
        .btn-opt { width: 100%; padding: 12px; margin-bottom: 8px; border: 1px solid #eee; background: #fff; border-radius: 10px; cursor: pointer; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .palette-grid { display: grid; grid-template-columns: repeat(8, 1fr); gap: 5px; margin-top: 15px; }
        .color-dot { width: 100%; aspect-ratio: 1; border-radius: 4px; cursor: pointer; }
        #ratingSwitcher { display: none; position: fixed; background: white; border-radius: 15px; z-index: 20000; padding: 10px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
        
        .paper-lined { background-image: repeating-linear-gradient(transparent 0px, transparent 31px, rgba(0,0,0,0.05) 32px); }
        .paper-grid { background-image: linear-gradient(rgba(0,0,0,0.05) 1px, transparent 1px), linear-gradient(90deg,rgba(0,0,0,0.05) 1px, transparent 1px); background-size:30px 30px; }
        .paper-dots { background-image: radial-gradient(rgba(0,0,0,0.1) 1px, transparent 1px); background-size:25px 25px; }
