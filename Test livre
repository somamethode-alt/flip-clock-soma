    <script>
        let db = JSON.parse(localStorage.getItem('soma_book_db')) || [];
        let activeZone = '';
        const palette = ["#FDFBF7","#E1E3E3","#DFD8D5","#F28D8D","#F2C38D","#F2EB8D","#BAF28D","#8DBAF2","#C5B1E8","#3D2B1F","#A2A09A","#B1A6A6"];

        function openBook() { 
            document.getElementById('cover').classList.add('opened'); 
            document.getElementById('main-content').classList.add('visible');
            document.getElementById('side-nav').classList.add('show');
        }
        function closeBook() { 
            document.getElementById('cover').classList.remove('opened'); 
            document.getElementById('main-content').classList.remove('visible');
            document.getElementById('side-nav').classList.remove('show');
        }

        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        function openPalette(zone) {
            activeZone = zone;
            document.getElementById('zoneModal').style.display='none';
            document.getElementById('paletteTitle').innerText = "Couleur : " + zone;
            const grid = document.getElementById('paletteGrid'); grid.innerHTML = '';
            palette.forEach(c => {
                const d = document.createElement('div');
                d.className = 'color-dot'; d.style.background = c;
                d.onclick = () => {
                    document.documentElement.style.setProperty('--' + activeZone + '-bg', c);
                    localStorage.setItem('soma_color_' + activeZone, c);
                    closeModals();
                };
                grid.appendChild(d);
            });
            document.getElementById('paletteModal').style.display='block';
        }

        function setPaper(style) {
            document.body.className = style;
            localStorage.setItem('soma_paper_style', style);
            closeModals();
        }

        function setCoverImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    localStorage.setItem('soma_cover_img', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function clearStatsBg() {
            document.querySelectorAll('.stat-card').forEach(c => c.style.backgroundImage = 'none');
            localStorage.removeItem('soma_cover_img');
            document.getElementById('cover').style.backgroundImage = 'none';
        }

        function addRow() {
            db.push({titre:'', edition:'', recu:'', deadline:'', statut:'PAL'});
            render();
        }

        function render() {
            const body = document.getElementById('tableBody'); body.innerHTML = '';
            db.forEach((item, i) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td><input type="text" value="${item.titre}" oninput="update(${i},'titre',this.value)" placeholder="Livre..."></td>
                    <td><input type="text" value="${item.edition}" oninput="update(${i},'edition',this.value)" placeholder="Éditeur..."></td>
                    <td><input type="date" value="${item.recu}" onchange="update(${i},'recu',this.value)"></td>
                    <td><input type="date" value="${item.deadline}" onchange="update(${i},'deadline',this.value)"></td>
                    <td><select onchange="update(${i},'statut',this.value,true)">
                        <option value="PAL" ${item.statut==='PAL'?'selected':''}>PAL</option>
                        <option value="COURS" ${item.statut==='COURS'?'selected':''}>EN COURS</option>
                        <option value="LU" ${item.statut==='LU'?'selected':''}>LU</option>
                    </select></td>
                    <td><button onclick="removeRow(${i})" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold;">X</button></td>
                `;
                body.appendChild(row);
            });
            updateStats();
        }

        function update(i, k, v, refresh=false) {
            db[i][k] = v;
            localStorage.setItem('soma_book_db', JSON.stringify(db));
            if(refresh) render(); else updateStats();
        }

        function removeRow(i) { db.splice(i, 1); render(); }

        function updateStats() {
            document.getElementById('countLus').innerText = db.filter(x => x.statut === 'LU').length;
            document.getElementById('countCours').innerText = db.filter(x => x.statut === 'COURS').length;
            document.getElementById('countPAL').innerText = db.filter(x => x.statut === 'PAL').length;
        }

        function saveUser() { localStorage.setItem('soma_book_user', document.getElementById('userName').value); }
        function resetAll() { if(confirm("Tout effacer ?")) { localStorage.clear(); location.reload(); } }

        // Chargement initial
        window.onload = () => {
            const user = localStorage.getItem('soma_book_user'); if(user) document.getElementById('userName').value = user;
            const paper = localStorage.getItem('soma_paper_style'); if(paper) document.body.className = paper;
            const img = localStorage.getItem('soma_cover_img'); if(img) document.getElementById('cover').style.backgroundImage = `url(${img})`;
            ['cover','page','stat-lus','stat-cours','stat-pal'].forEach(z => {
                const c = localStorage.getItem('soma_color_' + z);
                if(c) document.documentElement.style.setProperty('--' + z + '-bg', c);
            });
            render();
        };
    </script>
</body>
</html>
