    <div id="paperMenu" class="menu-modal">
        <h3>Type de Papier</h3>
        <button class="option-btn" onclick="changePaper('dots')">Points (Dotted)</button>
        <button class="option-btn" onclick="changePaper('lines')">Lignes (Ruled)</button>
        <button class="option-btn" onclick="changePaper('blank')">Blanc Uni</button>
    </div>

    <script>
        function toggleMenu(id) {
            const menus = document.querySelectorAll('.menu-modal');
            menus.forEach(m => { if(m.id !== id) m.style.display = 'none'; });
            const target = document.getElementById(id);
            target.style.display = target.style.display === 'block' ? 'none' : 'block';
        }

        function changePaper(type) {
            const p = document.getElementById('paper');
            if(type === 'dots') p.style.backgroundImage = 'radial-gradient(#d1d1d1 1px, transparent 1px)';
            if(type === 'lines') p.style.backgroundImage = 'linear-gradient(#eee 1px, transparent 1px)';
            if(type === 'blank') p.style.backgroundImage = 'none';
            toggleMenu('paperMenu');
        }

        function changeCover(color) {
            document.getElementById('mainBook').style.backgroundColor = color;
            // Si on change la couleur du "livre", on peut simuler la couverture
            toggleMenu('colorMenu');
        }

        function handleImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.maxWidth = '300px';
                    img.style.position = 'absolute';
                    img.style.cursor = 'move';
                    // Ici on pourrait ajouter du JS pour rendre l'image d√©pla√ßable
                    document.getElementById('paper').appendChild(img);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function resetContent() {
            if(confirm("Effacer le contenu de la page ?")) {
                document.getElementById('paper').innerHTML = '<h1 contenteditable="true">Titre...</h1>';
            }
        }
    </script>
