    <div id="paletteModal" class="modal">
        <p id="paletteTitle" style="font-size: 10px; text-transform: uppercase; font-weight: bold;"></p>
        <div class="palette-grid" id="paletteGrid"></div>
    </div>

    <div id="paperModal" class="modal">
        <p style="font-size: 10px; text-transform: uppercase; font-weight: bold;">Type de Papier</p>
        <div class="paper-opt" onclick="setPaper('paper-uni')">Uni Minimaliste</div>
        <div class="paper-opt paper-grid" onclick="setPaper('paper-grid')">Grille Bullet</div>
        <div class="paper-opt paper-lines" onclick="setPaper('paper-lines')">Ligné Journal</div>
    </div>

    <div id="book-wrapper">
        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 42px; letter-spacing: 3px; margin-top: 10vh; text-align:center;">Sōma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" oninput="saveUser()" placeholder="NOM DE L'AUTEUR" style="border:none; border-bottom:1.5px solid #000; text-align: center; font-size: 14px; width: 250px; background: transparent; letter-spacing: 3px; text-transform: uppercase;">
            </div>
            <div class="turn-page-hint">Tourner la page →</div>
            <div style="font-size: 26px; letter-spacing: 10px; font-weight: 300;">SŌMA</div>
        </div>

        <div id="main-content">
            <div style="display:flex; justify-content: space-between; align-items: center; margin-bottom: 40px;">
                <button onclick="closeBook()" style="background:none; border:1px solid #000; padding:10px 22px; cursor:pointer; font-size:10px; text-transform:uppercase; border-radius:30px; font-weight:bold;">Refermer le livre</button>
                
                <div class="tools-right">
                    <input type="file" id="coverImg" style="display:none" onchange="setCoverImage(this)">
                    <div class="tool-btn" onclick="document.getElementById('coverImg').click()">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="1.5"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                        <span>Image</span>
                    </div>
                    <div class="tool-btn" onclick="clearStatsBg()">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="1.5"><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
