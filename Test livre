        <button onclick="openPalette('page')" style="width:100%; padding:12px; margin-bottom:8px; cursor:pointer;">Couleur Pages</button>
        <div style="display:flex; gap:5px;">
            <button onclick="openPalette('stat-lus')" style="flex:1; padding:10px; font-size:9px;">Lus</button>
            <button onclick="openPalette('stat-cours')" style="flex:1; padding:10px; font-size:9px;">Cours</button>
