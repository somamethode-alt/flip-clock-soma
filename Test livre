        td { padding: 15px; border-bottom: 1px solid rgba(0,0,0,0.03); }
        input[type="text"], select { border: 1px solid rgba(0,0,0,0.05); background: white; padding: 10px; border-radius: 6px; width: 90%; font-family: inherit; font-size: 13px; }
