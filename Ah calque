        <div id="tabs-container"></div>
        <div id="cover" onclick="openBook()">
            <div id="cover-notif-area" class="notif-area" onclick="event.stopPropagation()"></div>
            <div style="font-family: 'Playfair Display', serif; font-size: 60px;">S≈çma Book</div>
            <input type="text" id="userName" placeholder="PR√âNOM ET NOM" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 300px; background: transparent; outline:none;" onclick="event.stopPropagation()">
            <div style="font-size: 32px; letter-spacing: 15px;">S≈åMA</div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()">‚Üê</div>
        <div class="nav-zone nav-next" onclick="nextPage()">‚Üí</div>
        <div id="pages-slider"></div>
    </div>

    <div id="formatModal" class="modal">
        <button class="btn-opt" onmousedown="event.preventDefault()" onclick="currentFormatAction='foreColor'">Couleur</button>
        <button class="btn-opt" onmousedown="event.preventDefault()" onclick="currentFormatAction='hiliteColor'">Surligner</button>
        <div class="palette-grid" id="formatPalette"></div>
    </div>
    <div id="reviewPopup" class="modal"><button class="btn-opt" onclick="insertReviewWidget()">AJOUTER REVIEW COMPLETE</button></div>
    <div id="paperModal" class="modal">
        <button class="btn-opt" onclick="changePaper('paper-blank')">Vierge</button>
        <button class="btn-opt" onclick="changePaper('paper-lined')">Lign√©</button>
        <button class="btn-opt" onclick="changePaper('paper-grid')">Quadrill√©</button>
        <button class="btn-opt" onclick="changePaper('paper-dots')">Pointill√©</button>
    </div>
    <div id="colorModal" class="modal"><select id="colorTarget" class="btn-opt"><option value="tab">Onglet</option><option value="cover">Couverture</option><option value="page">Page</option></select><div class="palette-grid" id="colorPalette"></div></div>

    <input type="file" id="revImgUpload" hidden onchange="handleRevImage(this)">
    <input type="file" id="stickerUpload" hidden onchange="handleSticker(this)">
    <input type="file" id="velinUpload" hidden onchange="handleVelin(this)">

    <script>
        const colors = ["#FDFBF7","#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        let tabsData = JSON.parse(localStorage.getItem('soma_v8')) || [{ color: "#E1E3E3", content: "", paper: "paper-lined", paperColor: "#ffffff" }];
        let currentIdx = 0, lastRevBox = null, currentFormatAction = 'foreColor', ratingSymbol = '‚òÖ', pressTimer, savedRange = null;
        let dismissedNotifs = [];

        function openBook() { document.getElementById('cover').classList.add('opened'); initBook(); }
        function initBook() { renderPages(); updateNavigation(); }

        function renderPages() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = "";
            tabsData.forEach((page, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${page.paper}`;
                div.style.backgroundColor = page.paperColor || "#ffffff";
                div.contentEditable = true;
                div.innerHTML = page.content;
                div.oninput = () => { save(); refreshGlobalNotifs(); };
                div.onmouseup = div.ontouchend = () => {
                    const sel = window.getSelection();
                    if (sel.rangeCount > 0) savedRange = sel.getRangeAt(0);
                };
                slider.appendChild(div);
                initStickers(div);
            });
            renderTabs();
            refreshGlobalNotifs();
        }

        function renderTabs() {
            const container = document.getElementById('tabs-container');
            container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div"); el.className = "tab"; el.style.background = t.color; el.textContent = i + 1; el.onclick = () => goToPage(i); container.appendChild(el);
            });
        }

        function refreshGlobalNotifs() {
            const cards = document.querySelectorAll('.review-card');
            const areas = [document.getElementById('cover-notif-area'), document.getElementById('page-notif-area')];
            areas.forEach(a => a.innerHTML = "");
            cards.forEach((card, cardIdx) => {
                if (dismissedNotifs.includes(cardIdx)) return;
                const title = (card.querySelector('.b-title').value || card.querySelector('.b-title').getAttribute('value') || "").trim();
                const total = parseInt(card.querySelector('.total-pg').value || card.querySelector('.total-pg').getAttribute('value'));
                const read = parseInt(card.querySelector('.read-pg').value || card.querySelector('.read-pg').getAttribute('value'));
                const endStr = card.querySelector('.date-end').value || card.querySelector('.date-end').getAttribute('value');
                if (title && !isNaN(total) && endStr && !isNaN(read) && read < total) {
                    const today = new Date();
                    const endDate = new Date(endStr);
                    const diffTime = endDate - today;
                    const diffDays = Math.max(1, Math.ceil(diffTime / (1000 * 60 * 60 * 24)));
                    const perDay = Math.ceil((total - read) / diffDays);
                    let msg = `Il te reste ${total - read} pages pour "${title}". Lis en ${perDay}/jour !`;
                    areas.forEach(area => {
                        const notif = document.createElement('div');
                        notif.className = "imessage-notif";
                        notif.innerHTML = `<div class="imessage-header"><span>S≈åMA BOOK</span><span>maintenant</span></div><div class="imessage-body">${msg}</div>`;
                        notif.onclick = (e) => { e.stopPropagation(); dismissedNotifs.push(cardIdx); refreshGlobalNotifs(); };
                        area.appendChild(notif);
                    });
                }
            });
        }

        function handleVelin(input) {
            if (input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    const id = 'velin_' + Date.now();
                    const container = `<div id="${id}" class="velin-container" contenteditable="false">
                        <div class="velin-controls">
                            <span class="velin-delete" onclick="event.stopPropagation(); document.getElementById('${id}').remove(); save();">√ó</span>
                            <input type="range" class="velin-opacity-slider" min="0" max="1" step="0.1" value="0.5" 
                                oninput="this.parentElement.parentElement.querySelector('.velin-image').style.opacity = this.value; save();">
                        </div>
                        <img src="${e.target.result}" class="velin-image">
                    </div>`;
                    document.querySelectorAll('.page-surface')[currentIdx].innerHTML += container;
                    save();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function handleSticker(input) {
            if (input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    const id = 'stk_' + Date.now();
                    const wrap = `<div id="${id}" class="sticker-wrapper" style="top:150px; left:150px; width:120px;" contenteditable="false">
                        <div class="stk-ctrl"><div class="stk-btn" onclick="resizeManual('${id}', 20)">+</div><div class="stk-btn" onclick="resizeManual('${id}', -20)">-</div><div class="stk-btn stk-del" onclick="document.getElementById('${id}').remove(); save();">√ó</div></div>
                        <img src="${e.target.result}">
                    </div>`;
                    document.querySelectorAll('.page-surface')[currentIdx].innerHTML += wrap;
                    save(); initStickers(document.querySelectorAll('.page-surface')[currentIdx]);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function initStickers(container) {
            container.querySelectorAll('.sticker-wrapper').forEach(el => {
                el.onpointerdown = (e) => {
                    if(e.target.classList.contains('stk-btn')) return;
                    let sX = e.clientX - el.offsetLeft, sY = e.clientY - el.offsetTop;
                    document.onpointermove = (ev) => { el.style.left = (ev.clientX - sX) + 'px'; el.style.top = (ev.clientY - sY) + 'px'; };
                    document.onpointerup = () => { document.onpointermove = null; save(); };
                };
            });
        }

        function insertReviewWidget() {
            const widget = `<div class="review-card" contenteditable="false">
                <div class="rev-top-section">
                    <div class="rev-photo-box" onclick="triggerRevImg(this)">PHOTO</div>
                    <div class="rev-form-grid">
                        <div class="rev-field"><span class="rev-label">Titre</span><input class="rev-input b-title" type="text" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Total Pages</span><input class="rev-input total-pg" type="number" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Pages Lues</span><input class="rev-input read-pg" type="number" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Date Fin</span><input class="rev-input date-end" type="date" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-rating-area" onmousedown="startPress(this)" onmouseup="endPress(event, this)">
                            <div class="rating-selector-popup"><span onclick="changeSymbol('‚òÖ', this)">‚òÖ</span><span onclick="changeSymbol('‚ô•', this)">‚ô•</span><span onclick="changeSymbol('üî•', this)">üî•</span></div>
                            <span class="stars-display">‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ</span>
                        </div>
                    </div>
                </div>
                <div class="rev-bottom-section">
                    <div class="rev-block"><span class="rev-block-label">Avis</span><div class="rev-content" contenteditable="true">...</div></div>
                    <div class="rev-block"><span class="rev-block-label">Citation</span><div class="rev-content" contenteditable="true">"..."</div></div>
                </div>
            </div><br>`;
            document.querySelectorAll('.page-surface')[currentIdx].innerHTML += widget;
            save(); closeModals();
        }

        // NAVIGATION AVEC EFFET TOURNER PAGE
        function updateNavigation() { 
            const slider = document.getElementById('pages-slider');
            slider.style.transform = `translateX(-${currentIdx * 100}vw)`; 
        }

        function nextPage() { 
            save(); 
            if (currentIdx < tabsData.length - 1) {
                currentIdx++;
            } else {
                tabsData.push({ color: "#E1E3E3", content: "", paper: "paper-lined", paperColor: "#ffffff" });
                renderPages();
                currentIdx++;
            }
            updateNavigation();
        }

        function prevPage() { 
            save(); 
            if (currentIdx > 0) { 
                currentIdx--; 
                updateNavigation(); 
            } else {
                document.getElementById('cover').classList.remove('opened');
            }
        }

        function goToPage(i) { save(); currentIdx = i; updateNavigation(); }
        function startPress(el) { pressTimer = setTimeout(() => { el.querySelector('.rating-selector-popup').style.display = 'flex'; }, 600); }
        function endPress(e, el) {
            clearTimeout(pressTimer);
            if (e.target.closest('.rating-selector-popup')) return;
            const rect = el.getBoundingClientRect();
            const count = Math.ceil(((e.clientX || e.changedTouches[0].clientX) - rect.left) / rect.width * 5);
            const sym = el.dataset.symbol || '‚òÖ';
            el.querySelector('.stars-display').innerHTML = `<span style="color:#f1c40f">${sym.repeat(Math.min(5, count))}</span>${'‚òÜ'.repeat(Math.max(0, 5-count))}`;
            save();
        }
        function changeSymbol(sym, btn) { const area = btn.closest('.rev-rating-area'); area.dataset.symbol = sym; area.querySelector('.rating-selector-popup').style.display = 'none'; save(); }
        function resizeManual(id, delta) { const el = document.getElementById(id); const newWidth = Math.max(40, (parseInt(el.style.width) || 120) + delta); el.style.width = newWidth + 'px'; save(); }
        function changePaper(s) { tabsData[currentIdx].paper = s; renderPages(); closeModals(); save(); }
        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }
        function triggerRevImg(el) { lastRevBox = el; document.getElementById('revImgUpload').click(); }
        function handleRevImage(i) { if (i.files[0]) { const r = new FileReader(); r.onload = e => { lastRevBox.style.backgroundImage = `url(${e.target.result})`; lastRevBox.textContent = ""; save(); }; r.readAsDataURL(i.files[0]); } }
        
        function save() { 
            const surfaces = document.querySelectorAll('.page-surface');
            if(surfaces[currentIdx]) tabsData[currentIdx].content = surfaces[currentIdx].innerHTML;
            localStorage.setItem('soma_v8', JSON.stringify(tabsData)); 
        }

        window.onload = () => {
            const fP = document.getElementById('formatPalette'), cP = document.getElementById('colorPalette');
            colors.forEach(c => {
                const d1 = document.createElement('div'); d1.className='color-dot'; d1.style.background=c; d1.onclick=()=> {
                    const target = document.getElementById('colorTarget').value;
                    if(target === 'tab') tabsData[currentIdx].color = c;
                    else if (target === 'cover') document.getElementById('cover').style.backgroundColor = c;
                    else tabsData[currentIdx].paperColor = c;
                    renderPages(); save(); closeModals();
                }; 
                cP.appendChild(d1);
                const d2 = document.createElement('div'); d2.className='color-dot'; d2.style.background=c; 
                d2.onmousedown = (e) => e.preventDefault();
                d2.onclick=()=> {
                    if (savedRange) { const sel = window.getSelection(); sel.removeAllRanges(); sel.addRange(savedRange); }
                    document.execCommand(currentFormatAction, false, c); save(); closeModals();
                };
                fP.appendChild(d2);
            });
            initBook();
        };
    </script>
</body>
</html>
