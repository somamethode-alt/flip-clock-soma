<script>
    const pastelColors = ["#E1E3E3", "#DFD8D5", "#D8D5D2", "#E6D4C4", "#BAB1B0", "#898684", "#F2F8F8", "#C3CED1", "#B1A6A6", "#B0AEB4", "#A2A09A", "#6F6869", "#E8E7E7", "#EEE9E9", "#D5C7B3", "#E2D7D4", "#B0A19F", "#C09D89", "#D0CFCD", "#E9F0F0", "#E4DDD4", "#B1B6AF", "#D7D8D2", "#B6AD9E", "#DFE5E5", "#E4E9EC", "#B8BFBA", "#8F877F", "#859A9E", "#BDD2E0", "#F8FCFD", "#E9EDEE", "#CFCFD4", "#E2DFD7", "#E2D5D5", "#DED0C7", "#F6F2F0", "#D4C1BA", "#D0C9CB", "#C1B2B1"];
    let candidatures = JSON.parse(localStorage.getItem('soma_vFinal')) || [];
    let currentZone = '';

    function saveName() { localStorage.setItem('soma_userName', document.getElementById('userName').value); }
    function openBook() { document.getElementById('cover').classList.add('opened'); document.getElementById('main-content').classList.add('visible'); }
    function closeBook() { document.getElementById('cover').classList.remove('opened'); document.getElementById('main-content').classList.remove('visible'); }
    function openModal(id) { document.getElementById(id).style.display = 'block'; document.getElementById('overlay').style.display = 'block'; }
    function closeModals() { document.querySelectorAll('.modal').forEach(m => m.style.display = 'none'); document.getElementById('overlay').style.display = 'none'; }
    function openPalette(zone) { currentZone = zone; document.getElementById('zoneModal').style.display = 'none'; document.getElementById('paletteTitle').innerText = "Couleur : " + zone; document.getElementById('colorModal').style.display = 'block'; }

    const grid = document.getElementById('paletteGrid');
    pastelColors.forEach(color => {
        const dot = document.createElement('div'); dot.className = 'color-dot'; dot.style.background = color;
        dot.onclick = () => { 
            document.documentElement.style.setProperty('--'+currentZone+(currentZone==='header'?'-table':'')+'-bg', color); 
            localStorage.setItem('soma_'+currentZone, color); 
            closeModals(); 
        };
        grid.appendChild(dot);
    });

    function applyBgImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const url = e.target.result;
                document.querySelectorAll('.stat-card').forEach(card => card.style.backgroundImage = `url(${url})`);
                localStorage.setItem('soma_module_bg', url);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    function removeBgImage() {
        document.querySelectorAll('.stat-card').forEach(card => card.style.backgroundImage = 'none');
        localStorage.removeItem('soma_module_bg');
    }

    function setPaper(s) { document.getElementById('main-content').className = 'visible ' + s; localStorage.setItem('soma_paper', s); closeModals(); }
    
    function addRow() { 
        candidatures.push({ id: Date.now(), nom: "", lieu: "", date: "", reponse: "Attente", time: "09:00" }); 
        render(); 
    }

    function resetData() { if(confirm("RESET TOTAL ?")) { localStorage.clear(); location.reload(); } }

    function render() {
        const body = document.getElementById('tableBody'); body.innerHTML = "";
        candidatures.forEach((c, i) => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td><input type="text" value="${c.nom}" oninput="u(${i},'nom',this.value)" placeholder="Nom"></td>
                <td><input type="text" value="${c.lieu || ''}" oninput="u(${i},'lieu',this.value)" placeholder="Adresse"></td>
                <td><input type="date" value="${c.date}" onchange="u(${i},'date',this.value)"></td>
                <td id="relance-${i}">${calc(c.date, c.reponse, c.nom)}</td>
                <td>
                    <select onchange="u(${i},'reponse',this.value)">
                        <option value="Attente" ${c.reponse==='Attente'?'selected':''}>Attente</option>
                        <option value="Oui" ${c.reponse==='Oui'?'selected':''}>OUI</option>
                        <option value="Non" ${c.reponse==='Non'?'selected':''}>NON</option>
                    </select>
                </td>
                <td>
                    <div style="display:flex; align-items:center;">
                        <button class="btn-mail" onclick="openMail('${c.nom}')" style="margin-right:5px;">‚úâÔ∏è MAIL</button>
                        <input type="time" class="time-picker" value="${c.time || '09:00'}" onchange="u(${i},'time',this.value)">
                        <button class="btn-cal" onclick="addToCalendar(${i})">üîî CAL</button>
                    </div>
                </td>`;
            body.appendChild(row);
        });
        updateStats();
    }

    function openMail(nomEtablissement) {
        const monNom = document.getElementById('userName').value || "Candidat";
        const subject = encodeURIComponent(`Relance : Candidature de stage ‚Äì ${monNom} ‚Äì ${nomEtablissement}`);
        window.location.href = `mailto:?subject=${subject}`;
    }

    function u(i,k,v) { 
        candidatures[i][k]=v; localStorage.setItem('soma_vFinal', JSON.stringify(candidatures)); 
        if(k==='date' || k==='reponse' || k==='nom') { render(); }
        updateStats();
    }

    function updateStats() {
        document.getElementById('statEnvoye').innerText = candidatures.length;
        document.getElementById('statAttente').innerText = candidatures.filter(c => c.reponse === "Attente").length;
        document.getElementById('statTrouve').innerText = candidatures.filter(c => c.reponse === "Oui").length;
    }

    function cleanTextAndLink(text) {
        if(!text || text.trim() === "") return "un √©tablissement";
        let t = text.trim().toLowerCase();
        t = t.replace(/hopital/g, "h√¥pital").replace(/ecole/g, "√©cole");
        let finalNom = t.replace(/(^\w|\s\w)/g, m => m.toUpperCase());
        const voyelles = ['A', 'E', 'I', 'O', 'U', 'Y', 'H', '√©', '√â', '√¢', '√Ç'];
        return voyelles.includes(finalNom.charAt(0)) ? `l'${finalNom}` : finalNom;
    }

    function calc(d, status, nom) { 
        if(!d || status !== "Attente") return "-"; 
        let dateR = new Date(d); dateR.setDate(dateR.getDate() + 10);
        let today = new Date(); today.setHours(0,0,0,0);
        if (today > dateR) { showIMessage(cleanTextAndLink(nom)); return `<span class="urgent-relance">√Ä RELANCER (${dateR.toLocaleDateString('fr-FR')})</span>`; }
        return dateR.toLocaleDateString('fr-FR'); 
    }

    function showIMessage(nomLie) {
        document.getElementById('imessage-text').innerText = `Tu as oubli√© de relancer ta demande de stage pour ${nomLie}`;
        document.getElementById('imessage-notif').classList.add('show');
    }

    function addToCalendar(i) {
        const c = candidatures[i]; if(!c.date) return alert("Date ?");
        let dR = new Date(c.date); dR.setDate(dR.getDate() + 10);
        const [h, m] = (c.time || "09:00").split(':');
        dR.setHours(parseInt(h), parseInt(m), 0);
        
        const f = (d) => d.toISOString().replace(/-|:|\.\d+/g, "");
        const dEnd = new Date(dR.getTime() + 30*60000); 
        const ics = `BEGIN:VCALENDAR\nVERSION:2.0\nBEGIN:VEVENT\nDTSTART:${f(dR)}\nDTEND:${f(dEnd)}\nSUMMARY:Relance Stage: ${c.nom}\nEND:VEVENT\nEND:VCALENDAR`;
        const link = document.createElement('a'); link.href = URL.createObjectURL(new Blob([ics], { type: 'text/calendar' })); link.download = `relance.ics`; link.click();
    }

    const sn = localStorage.getItem('soma_userName'); if(sn) document.getElementById('userName').value = sn;
    const sbg = localStorage.getItem('soma_module_bg'); if(sbg) document.querySelectorAll('.stat-card').forEach(card => card.style.backgroundImage = `url(${sbg})`);
    
    ['cover','page','header','stat-envoye','stat-attente','stat-trouve'].forEach(z => {
        const s = localStorage.getItem('soma_'+z);
        if(s) document.documentElement.style.setProperty('--'+z+(z==='header'?'-table':'')+'-bg', s);
    });
    const sp = localStorage.getItem('soma_paper'); if(sp) setPaper(sp);
    render();
</script>
</body>
</html>
