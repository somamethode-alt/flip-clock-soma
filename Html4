<script>
// --- CONFIGURATION ---
const USE_24H = true; // Mettre à 'false' pour le format 12h
// ---------------------

let lastS = -1;

function updateClock() {
    const now = new Date();
    
    // Calcul Heures
    let h = now.getHours();
    if (!USE_24H) h = h % 12 || 12;
    document.getElementById('h-val').textContent = String(h).padStart(2, '0');

    // Calcul Minutes
    let m = now.getMinutes();
    document.getElementById('m-val').textContent = String(m).padStart(2, '0');

    // Calcul Secondes (avec animation livre)
    let s = now.getSeconds();
    if (s !== lastS) {
        const leaf = document.getElementById('s-leaf');
        const next = document.getElementById('s-next');
        const displayS = String(s).padStart(2, '0');

        leaf.classList.add('flipping');
        
        setTimeout(() => {
            leaf.textContent = displayS;
            next.textContent = displayS;
            leaf.classList.remove('flipping');
        }, 300);
        
        lastS = s;
    }
}

function changeColor(bg, text) {
    document.documentElement.style.setProperty('--widget-bg', bg);
    document.documentElement.style.setProperty('--widget-text', text);
}

setInterval(updateClock, 1000);
updateClock();
</script>

