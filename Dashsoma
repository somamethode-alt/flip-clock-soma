        .rev-input { border: none; outline: none; flex: 1; font-family: 'Inter'; font-size: 13px; background: transparent; }
        
        .rev-rating-area { margin-top: 10px; cursor: pointer; font-size: 22px; user-select: none; }
        .rev-rating-area span.active { color: #f1c40f; }

        .rev-bottom-section { display: grid; grid-template-columns: 2fr 1fr; gap: 30px; }
        .rev-block { border: 1px solid #eee; padding: 15px; min-height: 120px; position: relative; }
        .rev-block-label { position: absolute; top: -8px; left: 10px; background: #fff; padding: 0 5px; font-size: 9px; font-weight: bold; text-transform: uppercase; }
