        .rev-photo-box { width: 180px; height: 260px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #999; cursor: pointer; background-size: cover; background-position: center; }
        
        .rev-form-grid { display: flex; flex-direction: column; gap: 10px; }
        .rev-field { border-bottom: 1px solid #eee; display: flex; align-items: baseline; gap: 10px; padding: 5px 0; }
