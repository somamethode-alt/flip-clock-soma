            display: flex; flex-direction: column; gap: 4px;
            animation: slideIn 0.5s ease;
        }
        .imessage-header { display: flex; justify-content: space-between; font-size: 10px; color: #888; text-transform: uppercase; font-weight: bold; }
        .imessage-body { font-size: 13px; color: #000; line-height: 1.4; }

        .sticker { max-width: 150px; cursor: move; user-select: none; display: inline-block; }

        @keyframes slideIn { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        /* Modals */
        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 20px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.2); z-index: 10000; backdrop-filter: blur(4px); }
        .btn-opt { width: 100%; padding: 12px; margin-bottom: 8px; border: 1px solid #eee; background: #fff; border-radius: 10px; cursor: pointer; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        #ratingSwitcher { display: none; position: fixed; background: white; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.2); z-index: 20000; padding: 10px; }
        .palette-grid { display: grid; grid-template-columns: repeat(8, 1fr); gap: 5px; margin-top: 15px; }
