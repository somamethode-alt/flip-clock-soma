    <div id="overlay" onclick="closeModals()"></div>

    <div id="ratingSwitcher">
        <button class="btn-opt" onclick="setRatingSymbol('‚òÖ', '‚òÜ')">√âTOILES (‚òÖ)</button>
        <button class="btn-opt" onclick="setRatingSymbol('‚ô•', '‚ô°')">COEURS (‚ô•)</button>
        <button class="btn-opt" onclick="setRatingSymbol('üî•', '‚ö™')">FEU (üî•)</button>
    </div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="openModal('reviewPopup')">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
            </div>
            <div class="tool-icon" onclick="document.getElementById('stickerUpload').click()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/></svg>
            </div>
            <div class="tool-icon" onclick="openModal('paperModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/></svg>
            </div>
            <div class="tool-icon" onclick="openModal('colorModal')">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/></svg>
            </div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this)">
        <input type="file" id="revImgUpload" hidden onchange="handleRevImage(this)">
        <input type="file" id="stickerUpload" hidden onchange="handleSticker(this)">

        <div id="tabs-container"></div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">S≈çma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" placeholder="PR√âNOM ET NOM" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 350px; background: transparent; letter-spacing: 5px; text-transform: uppercase; outline:none;">
            </div>
            <div style="font-size: 32px; letter-spacing: 15px; font-weight: 300;">S≈åMA</div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()">‚Üê Revenir</div>
        <div class="nav-zone nav-next" onclick="nextPage()">Tourner la page ‚Üí</div>
        <div id="pages-slider"></div>
    </div>

    <div id="reviewPopup" class="modal">
        <p style="font-size: 11px; font-weight: bold; margin-bottom: 15px;">NOUVELLE FICHE</p>
        <button class="btn-opt" onclick="insertReviewWidget()">CR√âER UNE REVIEW</button>
        <button class="btn-opt" style="color:red;" onclick="closeModals()">Fermer</button>
    </div>

    <div id="paperModal" class="modal">
        <button class="btn-opt" onclick="changePaper('paper-lined')">Lign√©</button>
        <button class="btn-opt" onclick="changePaper('paper-grid')">Quadrill√©</button>
        <button class="btn-opt" onclick="changePaper('paper-dots')">Pointill√©s</button>
    </div>

    <div id="colorModal" class="modal">
        <div class="palette-grid" id="paletteGrid"></div>
    </div>

    <script>
        const colors = ["#FDFBF7","#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        let tabsData = JSON.parse(localStorage.getItem('soma_v5')) || [{ color: "#E1E3E3", content: "", paper: "paper-lined", paperColor: "#ffffff" }];
        let currentIdx = 0;
        let lastRevBox = null;
        let pressTimer;
        let activeRatingEl = null;

        function openBook() { document.getElementById('cover').classList.add('opened'); initBook(); }
        function initBook() { renderPages(); updateNavigation(); }

        function renderPages() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = "";
            tabsData.forEach((page, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${page.paper}`;
                div.style.backgroundColor = page.paperColor || "#ffffff";
                div.contentEditable = true;
                div.innerHTML = page.content;
                div.oninput = () => { tabsData[i].content = div.innerHTML; save(); };
                slider.appendChild(div);
            });
            const container = document.getElementById('tabs-container');
            container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div"); el.className = "tab"; el.style.background = t.color; el.textContent = i + 1; el.onclick = () => goToPage(i); container.appendChild(el);
            });
        }

        function insertReviewWidget() {
            const widget = `
                <div class="review-card" contenteditable="false">
                    <div class="rev-top-section">
                        <div class="rev-photo-box" onclick="triggerRevImg(this)">AJOUTER UNE COUVERTURE</div>
                        <div class="rev-form-grid">
                            <div class="rev-field"><span class="rev-label">Titre</span><input class="rev-input" type="text" placeholder="Le nom du livre..."></div>
                            <div class="rev-field"><span class="rev-label">Auteur</span><input class="rev-input" type="text" placeholder="Qui a √©crit ce livre ?"></div>
                            <div class="rev-field"><span class="rev-label">Genre</span><input class="rev-input" type="text" placeholder="Roman, Manga, etc."></div>
                            <div class="rev-field"><span class="rev-label">Total Pages</span><input class="rev-input total-pg" type="number" oninput="checkReadingStatus(this)"></div>
                            <div class="rev-field"><span class="rev-label">Lu</span><input class="rev-input read-pg" type="number" oninput="checkReadingStatus(this)"></div>
                            <div class="rev-field"><span class="rev-label">D√©but</span><input class="rev-input date-start" type="date" oninput="checkReadingStatus(this)"></div>
                            <div class="rev-field"><span class="rev-label">Fin Pr√©vue</span><input class="rev-input date-end" type="date" oninput="checkReadingStatus(this)"></div>
                            <div class="rev-rating-area" onmousedown="startPress(event, this)" onmouseup="endPress()" ontouchstart="startPress(event, this)" ontouchend="endPress()" onclick="setWidgetRating(event, this)">
                                <span>‚òÜ‚òÜ‚òÜ‚òÜ‚òÜ</span>
                            </div>
                            <div class="notif-container"></div>
                        </div>
                    </div>
                    <div class="rev-bottom-section">
                        <div class="rev-block"><span class="rev-block-label">R√©sum√© & Avis</span><div class="rev-content" contenteditable="true">...</div></div>
                        <div class="rev-block"><span class="rev-block-label">Citation</span><div class="rev-content" contenteditable="true">"..."</div></div>
                    </div>
                </div><br>`;
            const pages = document.querySelectorAll('.page-surface');
            pages[currentIdx].innerHTML += widget;
            save();
            closeModals();
        }

        function checkReadingStatus(el) {
            const card = el.closest('.review-card');
            const total = parseInt(card.querySelector('.total-pg').value);
            const read = parseInt(card.querySelector('.read-pg').value);
            const endStr = card.querySelector('.date-end').value;
            const container = card.querySelector('.notif-container');
            
            if (!total || !endStr || read >= total) { container.innerHTML = ""; return; }

            const endDate = new Date(endStr);
            const today = new Date();
            const diffTime = endDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            const pagesLeft = total - read;

            if (diffDays <= 0) {
                container.innerHTML = `
                    <div class="imessage-notif">
                        <div class="imessage-header"><span>S≈åMA BOOK</span><span>Maintenant</span></div>
                        <div class="imessage-body">Tu as du retard ! üö® Il te reste <b>${pagesLeft} pages</b>. Lis tout aujourd'hui pour finir √† temps !</div>
                    </div>`;
            } else if (diffDays < 7) {
                const perDay = Math.ceil(pagesLeft / diffDays);
                container.innerHTML = `
                    <div class="imessage-notif">
                        <div class="imessage-header"><span>S≈åMA BOOK</span><span>Maintenant</span></div>
                        <div class="imessage-body">Courage ! Il te reste <b>${diffDays} jours</b>. Tu dois lire <b>${perDay} pages/jour</b> pour finir. üìñ</div>
                    </div>`;
            } else { container.innerHTML = ""; }
            save();
        }

        function handleSticker(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    const img = `<img src="${e.target.result}" class="sticker" style="width:120px" onclick="this.style.width=(parseInt(this.style.width)+20)+'px'">`;
                    const pages = document.querySelectorAll('.page-surface');
                    pages[currentIdx].innerHTML += img;
                    save();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function startPress(e, el) { activeRatingEl = el; pressTimer = window.setTimeout(() => {
            const switcher = document.getElementById('ratingSwitcher');
            switcher.style.display = 'block'; switcher.style.left = (e.clientX || e.touches[0].clientX) + 'px'; switcher.style.top = (e.clientY || e.touches[0].clientY) + 'px';
        }, 800); }
        function endPress() { clearTimeout(pressTimer); }

        function setRatingSymbol(full, empty) {
            if(activeRatingEl) { activeRatingEl.setAttribute('data-full', full); activeRatingEl.setAttribute('data-empty', empty); activeRatingEl.querySelector('span').innerHTML = empty.repeat(5); }
            closeModals(); save();
        }

        function setWidgetRating(e, el) {
            if(document.getElementById('ratingSwitcher').style.display === 'block') return;
            const full = el.getAttribute('data-full') || '‚òÖ', empty = el.getAttribute('data-empty') || '‚òÜ';
            const rect = el.getBoundingClientRect();
            const count = Math.ceil(((e.clientX - rect.left) / rect.width) * 5);
            el.querySelector('span').innerHTML = `<span class="active">${full.repeat(count)}</span>${empty.repeat(5-count)}`;
            save();
        }

        function triggerRevImg(el) { lastRevBox = el; document.getElementById('revImgUpload').click(); }
        function handleRevImage(input) {
            if (input.files && input.files[0] && lastRevBox) {
                const reader = new FileReader();
                reader.onload = e => { lastRevBox.style.backgroundImage = `url(${e.target.result})`; lastRevBox.textContent = ""; save(); };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function updateNavigation() {
            document.getElementById('pages-slider').style.transform = `translateX(-${currentIdx * 100}vw)`;
            const allTabs = document.querySelectorAll('.tab');
            allTabs.forEach((tab, i) => { if (i < currentIdx) tab.classList.add('hidden-left'); else tab.classList.remove('hidden-left'); });
        }
        function nextPage() {
            if (currentIdx < tabsData.length - 1) { currentIdx++; } 
            else { tabsData.push({ color: colors[Math.floor(Math.random()*colors.length)], content: "", paper: "paper-lined", paperColor: "#ffffff" }); renderPages(); currentIdx++; }
            updateNavigation(); save();
        }
        function prevPage() { if (currentIdx > 0) { currentIdx--; updateNavigation(); } else { document.getElementById('cover').classList.remove('opened'); } }
        function goToPage(i) { currentIdx = i; updateNavigation(); }
        function changePaper(style) { tabsData[currentIdx].paper = style; renderPages(); closeModals(); save(); }
        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal, #ratingSwitcher').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        function save() { 
            const slider = document.getElementById('pages-slider');
            if(slider && slider.children[currentIdx]) tabsData[currentIdx].content = slider.children[currentIdx].innerHTML;
            localStorage.setItem('soma_v5', JSON.stringify(tabsData)); 
        }

        const grid = document.getElementById('paletteGrid');
        colors.forEach(c => {
            const d = document.createElement('div'); d.className = 'color-dot'; d.style.background = c;
            d.onclick = () => { tabsData[currentIdx].color = c; renderPages(); closeModals(); save(); };
            grid.appendChild(d);
        });

        window.onload = () => {
            const author = localStorage.getItem('soma_user'); if(author) document.getElementById('userName').value = author;
            initBook();
        };
    </script>
</body>
</html>
