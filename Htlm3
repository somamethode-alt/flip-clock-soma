    <div class="book-flip" id="seconds-widget">
        <div class="base" id="next-val">00</div>
        <div class="leaf" id="current-leaf">00</div>
    </div>

    <div class="palette">
        <div class="color-dot" style="background:#e7def6;" onclick="changeColor('#e7def6', '#4b4453')"></div>
        <div class="color-dot" style="background:#fbe4d8;" onclick="changeColor('#fbe4d8', '#6b544a')"></div>
        <div class="color-dot" style="background:#e2f3e8;" onclick="changeColor('#e2f3e8', '#4a6b58')"></div>
        <div class="color-dot" style="background:#d8e8fb;" onclick="changeColor('#d8e8fb', '#4a5b6b')"></div>
    </div>

    <div class="credit">Sōma</div>
</div>

<script>
let lastSec = -1;
const leaf = document.getElementById('current-leaf');
const nextValEl = document.getElementById('next-val');

function updateClock() {
    const now = new Date();
    const s = now.getSeconds();
    
    if (s !== lastSec) {
        const displayS = String(s).padStart(2, '0');
        
        // Animation de la page
        leaf.classList.add('flipping');
        
        setTimeout(() => {
            leaf.textContent = displayS;
            nextValEl.textContent = displayS;
            leaf.classList.remove('flipping');
        }, 300); // Milieu de l'animation
        
        lastSec = s;
    }
}

function changeColor(bg, text) {
    document.documentElement.style.setProperty('--widget-bg', bg);
    document.documentElement.style.setProperty('--widget-text', text);
}

setInterval(updateClock, 1000);
updateClock();
</script>

</body>
