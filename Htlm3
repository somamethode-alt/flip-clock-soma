<script>
// --- CONFIGURATION ---
const USE_24H = true; // Changez par 'false' pour le format 12h
// ---------------------

let prevValues = { h: -1, m: -1, s: -1 };

function animateUnit(unit, value) {
    const leaf = document.getElementById(`${unit}-leaf`);
    const nextValEl = document.getElementById(`${unit}-next`);
    const displayVal = String(value).padStart(2, '0');

    if (leaf.textContent !== displayVal) {
        leaf.classList.add('flipping');
        setTimeout(() => {
            leaf.textContent = displayVal;
            nextValEl.textContent = displayVal;
            leaf.classList.remove('flipping');
        }, 250);
    }
}

function updateClock() {
    const now = new Date();
    let h = now.getHours();
    if (!USE_24H) h = h % 12 || 12;
    
    const m = now.getMinutes();
    const s = now.getSeconds();

    animateUnit('h', h);
    animateUnit('m', m);
    animateUnit('s', s);
}

function changeColor(bg, text) {
    document.documentElement.style.setProperty('--widget-bg', bg);
    document.documentElement.style.setProperty('--widget-text', text);
}

setInterval(updateClock, 1000);
updateClock();
</script>

