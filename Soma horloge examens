<body>

<div class="glass-card">
    <div class="title">Objectif Examen</div>

    <div class="timer-container">
        <div id="ticks"></div>
        <div class="time-content" style="position: absolute; text-align: center;">
            <div class="digits" id="timeDisplay">--:--</div>
            <div class="sub-text" id="statusLabel">définir date</div>
        </div>
    </div>

    <div class="controls">
        <input type="datetime-local" id="examDate" onchange="startTimer()">
        <div class="palette-trigger" onclick="togglePalette()"></div>
    </div>

    <div class="palette-menu" id="paletteMenu"></div>
    <div class="footer">SŌMA DESIGN</div>
</div>

<script>
    const pastelColors = ['#D4C5E2', '#B5D8CC', '#F3D1C1', '#C7CEEA', '#FFDAC1', '#E2F0CB', '#B2E2F2', '#F9E1E0', '#E8DFF5', '#FCF6BD', '#D0E1D4', '#E4C1F9', '#A9DEF9', '#F694C1', '#EDE7D9', '#A1CCD1', '#E9B3B3', '#D3D3D3', '#C1C8E4', '#84A59D'];
    const menu = document.getElementById('paletteMenu');
    pastelColors.forEach(color => {
        const dot = document.createElement('div');
        dot.className = 'color-dot';
        dot.style.background = color;
        dot.onclick = () => {
            document.documentElement.style.setProperty('--active-color', color);
            togglePalette();
        };
        menu.appendChild(dot);
    });

    const ticksBox = document.getElementById('ticks');
    const tickElements = [];
    for (let i = 0; i < 60; i++) {
        const tick = document.createElement('div');
        tick.className = 'tick';
        tick.style.transform = `translateX(-50%) translateY(70px) rotate(${i * 6}deg)`;
        ticksBox.appendChild(tick);
        tickElements.push(tick);
    }

    function togglePalette() {
        const m = document.getElementById('paletteMenu');
        m.style.display = m.style.display === 'grid' ? 'none' : 'grid';
    }

    let countdown;
    let currentTick = 0;

    function startTimer() {
        clearInterval(countdown);
        const target = new Date(document.getElementById('examDate').value).getTime();
        if (isNaN(target)) return;
        countdown = setInterval(() => {
            const now = Date.now();
            const diff = target - now;
            tickElements.forEach(t => t.classList.remove('active'));
            currentTick = (currentTick + 1) % 60;
            tickElements[currentTick].classList.add('active');
            if (diff <= 0) {
                clearInterval(countdown);
                document.getElementById('timeDisplay').innerText = "00:00";
                return;
            }
            const j = Math.floor(diff / 86400000);
            const h = Math.floor((diff % 86400000) / 3600000);
            const m = Math.floor((diff % 3600000) / 60000);
            document.getElementById('timeDisplay').innerText = j > 0 ? `${j}j ${h}h` : `${h}:${m.toString().padStart(2, '0')}`;
            document.getElementById('statusLabel').innerText = j > 0 ? "restants" : "temps restant";
        }, 1000);
    }
</script>
</body>
