    <style>
        :root { --cover-bg: #E1E3E3; --page-color: #ffffff; --review-text: #5a4d44; }

        body, html { 
            margin: 0; padding: 0; width: 100%; height: 100%; 
            font-family: 'Inter', sans-serif; background-color: #f0f0f0; 
