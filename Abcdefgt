            perspective: 2500px;
        }

        .grain { position: fixed; inset: 0; pointer-events: none; z-index: 9999; opacity: 0.04; background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E"); }

        #book-wrapper { width: 100vw; height: 100vh; background: var(--page-color); position: relative; overflow: hidden; transform-style: preserve-3d; }
        
        #cover { 
            position: absolute; inset: 0; background-color: var(--cover-bg); 
            z-index: 1000; display: flex; flex-direction: column; align-items: center; justify-content: space-between; 
            padding: 8% 20px; transition: transform 1.2s cubic-bezier(0.645, 0.045, 0.355, 1);
            cursor: pointer; transform-origin: left;
        }
        #cover.opened { transform: rotateY(-110deg); opacity: 0; pointer-events: none; }
        
        /* CALQUE / VELIN - ROTATION LATERALE */
        .velin-container { position: absolute; inset: 0; z-index: 500; pointer-events: none; transform-style: preserve-3d; }
        .velin-page {
            position: absolute; inset: 0;
            background-size: cover; background-position: center;
            mix-blend-mode: multiply; pointer-events: auto;
            transform-origin: left center;
            transition: transform 1.2s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 5px 0 15px rgba(0,0,0,0.05);
            cursor: pointer;
        }
        /* La page se tourne vers la gauche */
        .velin-page.lifted { transform: rotateY(-120deg); }
        
        .velin-ctrls {
            position: absolute; top: 25px; left: 25px; z-index: 501;
            background: white; padding: 8px 12px; border-radius: 20px;
            display: flex; gap: 10px; align-items: center; box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            pointer-events: auto;
        }

        .notif-area { width: 90%; max-width: 400px; z-index: 1100; position: absolute; top: 20px; left: 50%; transform: translateX(-50%); pointer-events: none; }

        /* STICKERS */
        .sticker-wrapper { position: absolute; cursor: move; user-select: none; z-index: 10; touch-action: none; display: inline-block; line-height: 0; padding: 5px; }
        .sticker-wrapper img { width: 100%; height: auto; pointer-events: none; mix-blend-mode: multiply; }
        .stk-ctrl { position: absolute; top: -10px; right: -10px; display: flex; gap: 5px; opacity: 0; transition: 0.3s; }
        .sticker-wrapper:hover .stk-ctrl { opacity: 1; }
        .stk-btn { background: white; border: 1px solid #ccc; border-radius: 50%; width: 22px; height: 22px; font-size: 14px; cursor: pointer; display: flex; align-items: center; justify-content: center; font-weight: bold; }
        .stk-del { color: #e74c3c; border-color: #e74c3c; }

        #tabs-container { position: absolute; right: 0; top: 60px; display: flex; flex-direction: column; gap: 2px; z-index: 2; }
        .tab { width: 45px; height: 50px; border-radius: 8px 0 0 8px; cursor: pointer; transition: 0.4s; display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: bold; box-shadow: -2px 2px 5px rgba(0,0,0,0.1); }

        #pages-slider { width: 100%; height: 100%; display: flex; transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
        .page-surface { min-width: 100vw; height: 100vh; box-sizing: border-box; padding: 100px 10% 40px 10%; position: relative; outline: none; overflow-y: auto; background-color: #fff; }

        .nav-zone { position: absolute; top: 0; bottom: 0; width: 80px; display: flex; align-items: center; justify-content: center; z-index: 100; cursor: pointer; opacity: 0.1; transition: 0.3s; }
        .nav-next { right: 0; } .nav-prev { left: 0; }

        .toolbar-top { position: absolute; top: 25px; right: 60px; display: flex; gap: 20px; z-index: 1100; }
        .tool-icon { cursor: pointer; opacity: 0.6; }
        .tool-icon svg { width: 22px; height: 22px; stroke: #333; }

        /* REVIEW COMPLETE */
        .review-card { border: 1px solid #333; padding: 25px; background: #fff; max-width: 800px; margin: 20px auto; color: var(--review-text); display: flex; flex-direction: column; gap: 20px; text-align: left; }
        .rev-top-section { display: grid; grid-template-columns: 180px 1fr; gap: 30px; }
        .rev-photo-box { width: 180px; height: 260px; border: 1px solid #eee; display: flex; align-items: center; justify-content: center; font-size: 10px; cursor: pointer; background-size: cover; background-position: center; }
        .rev-field { border-bottom: 1px solid #f0f0f0; display: flex; align-items: baseline; gap: 10px; padding: 8px 0; }
        .rev-label { font-size: 9px; font-weight: 800; text-transform: uppercase; letter-spacing: 1px; min-width: 85px; color: #aaa; }
        .rev-input { border: none; outline: none; flex: 1; font-family: 'Inter'; font-size: 13px; background: transparent; }
        .rev-bottom-section { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
        .rev-block { border: 1px solid #eee; padding: 15px; min-height: 80px; position: relative; }
        .rev-block-label { position: absolute; top: -8px; left: 10px; background: #fff; padding: 0 5px; font-size: 9px; font-weight: bold; text-transform: uppercase; color: #ccc; }
        
        .rev-rating-area { margin-top: 15px; cursor: pointer; font-size: 26px; }
        .imessage-notif { background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(20px); border-radius: 18px; padding: 14px; margin-bottom: 12px; box-shadow: 0 8px 20px rgba(0,0,0,0.1); border: 1px solid rgba(255,255,255,0.5); }
        .imessage-header { display: flex; justify-content: space-between; font-size: 10px; color: #666; font-weight: 700; }
        .imessage-body { font-size: 13px; color: #000; line-height: 1.4; margin-top: 4px; }

        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 20px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.2); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.1); z-index: 10000; backdrop-filter: blur(2px); }
        .btn-opt { width: 100%; padding: 12px; margin-bottom: 8px; border: 1px solid #eee; background: #fff; border-radius: 10px; cursor: pointer; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .palette-grid { display: grid; grid-template-columns: repeat(8, 1fr); gap: 5px; margin-top: 15px; }
        .color-dot { width: 100%; aspect-ratio: 1; border-radius: 4px; cursor: pointer; }
        .paper-lined { background-image: repeating-linear-gradient(transparent 0px, transparent 31px, rgba(0,0,0,0.05) 32px); }
    </style>
