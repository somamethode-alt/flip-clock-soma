<body>
    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div id="page-notif-area" class="notif-area"></div>
        <div class="toolbar-top">
            <div class="tool-icon" onclick="openModal('reviewPopup')"><svg viewBox="0 0 24 24" fill="none" stroke-width="2"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg></div>
            <div class="tool-icon" onclick="document.getElementById('stickerUpload').click()"><svg viewBox="0 0 24 24" fill="none" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/></svg></div>
            <div class="tool-icon" onclick="document.getElementById('velinUpload').click()"><svg viewBox="0 0 24 24" fill="none" stroke-width="2"><path d="M5 19V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v14l-5-3-5 3z" stroke-dasharray="2 2"/></svg></div>
            <div class="tool-icon" onclick="openModal('paperModal')"><svg viewBox="0 0 24 24" fill="none" stroke-width="2"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/></svg></div>
            <div class="tool-icon" onclick="openModal('colorModal')"><svg viewBox="0 0 24 24" fill="none" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg></div>
        </div>

        <div id="tabs-container"></div>
        <div id="cover" onclick="openBook()">
            <div id="cover-notif-area" class="notif-area"></div>
            <div style="font-family: 'Playfair Display', serif; font-size: 60px;">Sōma Book</div>
            <input type="text" id="userName" placeholder="PRÉNOM ET NOM" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 300px; background: transparent; outline:none;" onclick="event.stopPropagation()">
            <div style="font-size: 32px; letter-spacing: 15px;">SŌMA</div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()">←</div>
        <div class="nav-zone nav-next" onclick="nextPage()">→</div>
        <div id="pages-slider"></div>
    </div>

    <div id="reviewPopup" class="modal"><button class="btn-opt" onclick="insertReviewWidget()">AJOUTER REVIEW COMPLETE</button></div>
    <div id="paperModal" class="modal"><button class="btn-opt" onclick="changePaper('paper-blank')">Vierge</button><button class="btn-opt" onclick="changePaper('paper-lined')">Ligné</button></div>
    <div id="colorModal" class="modal"><select id="colorTarget" class="btn-opt"><option value="tab">Onglet</option><option value="page">Page</option></select><div class="palette-grid" id="colorPalette"></div></div>

    <input type="file" id="revImgUpload" hidden onchange="handleRevImage(this)">
    <input type="file" id="stickerUpload" hidden onchange="handleSticker(this)">
    <input type="file" id="velinUpload" hidden onchange="handleVelin(this)">

    <script>
        const colors = ["#FDFBF7","#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        let tabsData = JSON.parse(localStorage.getItem('soma_v11')) || [{ color: "#E1E3E3", content: "", paper: "paper-lined", paperColor: "#ffffff", velin: null }];
        let currentIdx = 0, lastRevBox = null;

        function openBook() { document.getElementById('cover').classList.add('opened'); initBook(); }
        function initBook() { renderPages(); updateNavigation(); }

        function renderPages() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = "";
            tabsData.forEach((page, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${page.paper}`;
                div.style.backgroundColor = page.paperColor || "#ffffff";
                div.contentEditable = true;
                div.innerHTML = page.content;

                if (page.velin) {
                    const vCont = document.createElement('div');
                    vCont.className = "velin-container";
                    vCont.innerHTML = `
                        <div class="velin-ctrls" onclick="event.stopPropagation()">
                            <input type="range" min="0.1" max="1" step="0.1" value="${page.velin.op}" oninput="adjustVOp(${i}, this.value)">
                            <span style="color:red; cursor:pointer;" onclick="removeV(${i})">×</span>
                        </div>
                        <div class="velin-page ${page.velin.lifted ? 'lifted' : ''}" 
                             style="background-image:url(${page.velin.src}); opacity:${page.velin.op}" 
                             onclick="toggleV(${i}, this)">
                        </div>
                    `;
                    div.appendChild(vCont);
                }
                div.oninput = () => { save(); refreshGlobalNotifs(); };
                slider.appendChild(div);
                initStickers(div);
            });
            renderTabs();
            refreshGlobalNotifs();
        }

        function toggleV(idx, el) {
            tabsData[idx].velin.lifted = !tabsData[idx].velin.lifted;
            el.classList.toggle('lifted');
            save();
        }

        function adjustVOp(idx, val) {
            tabsData[idx].velin.op = val;
            const page = document.querySelectorAll('.page-surface')[idx].querySelector('.velin-page');
            if(page) page.style.opacity = val;
            save();
        }

        function handleVelin(input) {
            if (input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    tabsData[currentIdx].velin = { src: e.target.result, op: 0.6, lifted: false };
                    save(); renderPages();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeV(idx) { tabsData[idx].velin = null; save(); renderPages(); }

        function save() { 
            const surfaces = document.querySelectorAll('.page-surface');
            if(surfaces[currentIdx]) {
                const clone = surfaces[currentIdx].cloneNode(true);
                const v = clone.querySelector('.velin-container');
                if(v) v.remove(); 
                tabsData[currentIdx].content = clone.innerHTML;
            }
            localStorage.setItem('soma_v11', JSON.stringify(tabsData)); 
        }

        function updateNavigation() { document.getElementById('pages-slider').style.transform = `translateX(-${currentIdx * 100}vw)`; }
        function nextPage() { save(); if (currentIdx < tabsData.length - 1) currentIdx++; else { tabsData.push({ color: "#E1E3E3", content: "", paper: "paper-lined", paperColor: "#ffffff", velin: null }); renderPages(); currentIdx++; } updateNavigation(); }
        function prevPage() { save(); if (currentIdx > 0) { currentIdx--; updateNavigation(); } else document.getElementById('cover').classList.remove('opened'); }
        function goToPage(i) { save(); currentIdx = i; updateNavigation(); }

        function insertReviewWidget() {
            const widget = `<div class="review-card" contenteditable="false">
                <div class="rev-top-section">
                    <div class="rev-photo-box" onclick="triggerRevImg(this)">PHOTO</div>
                    <div class="rev-form-grid">
                        <div class="rev-field"><span class="rev-label">Titre</span><input class="rev-input b-title" type="text" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Total Pages</span><input class="rev-input total-pg" type="number" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Pages Lues</span><input class="rev-input read-pg" type="number" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-field"><span class="rev-label">Date Fin</span><input class="rev-input date-end" type="date" oninput="this.setAttribute('value', this.value); save(); refreshGlobalNotifs()"></div>
                        <div class="rev-rating-area" onclick="setStars(event, this)"><span class="stars-display">☆☆☆☆☆</span></div>
                    </div>
                </div>
                <div class="rev-bottom-section">
                    <div class="rev-block"><span class="rev-block-label">Avis Personnel</span><div contenteditable="true" oninput="save()">...</div></div>
                    <div class="rev-block"><span class="rev-block-label">Citation Marquante</span><div contenteditable="true" oninput="save()">"..."</div></div>
                </div>
            </div><br>`;
            document.querySelectorAll('.page-surface')[currentIdx].innerHTML += widget;
            save(); closeModals();
        }

        function setStars(e, el) {
            const rect = el.getBoundingClientRect();
            const count = Math.ceil((e.clientX - rect.left) / rect.width * 5);
            el.innerHTML = `<span style="color:#f1c40f">${'★'.repeat(count)}</span>${'☆'.repeat(5-count)}`;
            save();
        }

        function refreshGlobalNotifs() {
            const cards = document.querySelectorAll('.review-card');
            const areas = [document.getElementById('cover-notif-area'), document.getElementById('page-notif-area')];
            areas.forEach(a => a.innerHTML = "");
            cards.forEach((card) => {
                const t = card.querySelector('.b-title').value || card.querySelector('.b-title').getAttribute('value');
                const tot = parseInt(card.querySelector('.total-pg').value || card.querySelector('.total-pg').getAttribute('value'));
                const read = parseInt(card.querySelector('.read-pg').value || card.querySelector('.read-pg').getAttribute('value'));
                const end = card.querySelector('.date-end').value || card.querySelector('.date-end').getAttribute('value');
                if (t && tot && end && read < tot) {
                    const diff = Math.max(1, Math.ceil((new Date(end) - new Date()) / 86400000));
                    areas.forEach(a => {
                        const n = document.createElement('div'); n.className="imessage-notif";
                        n.innerHTML = `<div class="imessage-header"><span>SŌMA BOOK</span><span>maintenant</span></div><div class="imessage-body">Plus que ${tot-read} pages pour "${t}". Lis ${Math.ceil((tot-read)/diff)}/j !</div>`;
                        a.appendChild(n);
                    });
                }
            });
        }

        function renderTabs() {
            const container = document.getElementById('tabs-container'); container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div"); el.className = "tab"; el.style.background = t.color; el.textContent = i + 1; el.onclick = () => goToPage(i); container.appendChild(el);
            });
        }
        function triggerRevImg(el) { lastRevBox = el; document.getElementById('revImgUpload').click(); }
        function handleRevImage(i) { if (i.files[0]) { const r = new FileReader(); r.onload = e => { lastRevBox.style.backgroundImage = `url(${e.target.result})`; lastRevBox.textContent = ""; save(); }; r.readAsDataURL(i.files[0]); } }
        function handleSticker(input) { if (input.files[0]) { const reader = new FileReader(); reader.onload = e => { const id = 'stk_' + Date.now(); document.querySelectorAll('.page-surface')[currentIdx].innerHTML += `<div id="${id}" class="sticker-wrapper" style="top:100px; left:100px; width:120px;" contenteditable="false"><div class="stk-ctrl"><div class="stk-btn stk-del" onclick="document.getElementById('${id}').remove(); save();">×</div></div><img src="${e.target.result}"></div>`; save(); initStickers(document.querySelectorAll('.page-surface')[currentIdx]); }; reader.readAsDataURL(input.files[0]); } }
        function initStickers(container) { container.querySelectorAll('.sticker-wrapper').forEach(el => { el.onpointerdown = (e) => { if(e.target.classList.contains('stk-btn')) return; let sX = e.clientX - el.offsetLeft, sY = e.clientY - el.offsetTop; document.onpointermove = (ev) => { el.style.left = (ev.clientX - sX) + 'px'; el.style.top = (ev.clientY - sY) + 'px'; }; document.onpointerup = () => { document.onpointermove = null; save(); }; }; }); }
        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }
        function changePaper(s) { tabsData[currentIdx].paper = s; renderPages(); save(); closeModals(); }

        window.onload = () => {
            const cP = document.getElementById('colorPalette');
            colors.forEach(c => {
                const d = document.createElement('div'); d.className='color-dot'; d.style.background=c; d.onclick=()=> {
                    if(document.getElementById('colorTarget').value==='tab') tabsData[currentIdx].color=c;
                    else tabsData[currentIdx].paperColor=c;
                    renderPages(); save(); closeModals();
                }; cP.appendChild(d);
            });
            initBook();
        };
    </script>
</body>
</html>
