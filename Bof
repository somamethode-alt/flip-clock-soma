            <div class="tab" style="background: #BAF28D;"></div>
            <div class="tab" style="background: #8DBAF2;"></div>
            <div class="tab" style="background: #C5B1E8;"></div>
        </div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 48px; letter-spacing: 4px; margin-top: 10vh; text-align:center;">Sōma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" oninput="saveUser()" placeholder="NOM DE L'AUTEUR" style="border:none; border-bottom:1.5px solid #000; text-align: center; font-size: 14px; width: 280px; background: transparent; letter-spacing: 4px; text-transform: uppercase; outline:none;">
            </div>
            <div class="turn-page-hint">Ouvrir le carnet →</div>
            <div style="font-size: 28px; letter-spacing: 12px; font-weight: 300;">SŌMA</div>
        </div>

        <div id="main-content">
            <div style="display:flex; justify-content: space-between; align-items: center; margin-bottom: 50px;">
                <button onclick="closeBook()" style="background:none; border:1.5px solid #000; padding:10px 25px; cursor:pointer; font-size:10px; text-transform:uppercase; border-radius:40px; font-weight:bold; letter-spacing:1px;">Refermer</button>
                
                <div class="tools-right">
                    <input type="file" id="coverImg" style="display:none" onchange="setCoverImage(this)">
                    <div class="tool-btn" onclick="document.getElementById('coverImg').click()">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="1.5"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                        <span>Image</span>
                    </div>
                    <div class="tool-btn" onclick="clearStatsBg()">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="1.5"><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
                        <span>Clear</span>
                    </div>
                    <div class="tool-btn" onclick="openModal('paperModal')">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="1.5"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>
                        <span>Papier</span>
                    </div>
                    <div class="tool-btn" onclick="resetAll()">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#d63031" stroke-width="1.5"><path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                        <span style="color:#d63031">Reset</span>
