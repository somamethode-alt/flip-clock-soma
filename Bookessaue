<body>
    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="openReview()"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg></div>
            <div class="tool-icon" onclick="document.getElementById('imgUpload').click()"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg></div>
            <div class="tool-icon" onclick="resetAll()"><svg viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2"><path d="M3 6h18m-2 0v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg></div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this, 'cover')">
        <input type="file" id="revPhotoUpload" hidden onchange="handleImage(this, 'review')">

        <div id="tabs-container"></div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">Sōma Book</div>
            <input type="text" id="userName" placeholder="PRÉNOM ET NOM" onclick="event.stopPropagation()" oninput="saveData()" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 350px; background: transparent; outline:none; text-transform: uppercase; letter-spacing: 3px;">
            <div class="lang-switch">
                <span onclick="setLang('FR'); event.stopPropagation();">FR</span> - <span onclick="setLang('EN'); event.stopPropagation();">EN</span>
            </div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()"><span id="txt-prev">← Revenir</span></div>
        <div class="nav-zone nav-next" onclick="nextPage()"><span id="txt-next">Tourner la page →</span></div>

        <div id="pages-slider"></div>

        <div id="playlist-widget">
            <input type="text" id="plInput" placeholder="Lien Spotify/YT..." onchange="loadPlaylist(this.value)">
            <div id="plDisplay" style="margin-top:5px"></div>
        </div>
    </div>

    <div id="reviewModal" class="modal-review">
        <div class="review-layout">
            <div class="rev-left">
                <div class="rev-photo" id="rev-img-display" onclick="document.getElementById('revPhotoUpload').click()">CLIQUE ICI POUR LA PHOTO</div>
                <div style="margin-top:20px; font-size:12px; font-weight:bold;">FORMAT :</div>
                <div style="margin-top:10px; font-size:11px;">
                    <label><input type="checkbox" id="check-book" onchange="saveData()"> <span id="lbl-b1">Livre</span></label><br>
                    <label><input type="checkbox" id="check-ebook" onchange="saveData()"> <span id="lbl-b2">E-Book</span></label><br>
                    <label><input type="checkbox" id="check-audio" onchange="saveData()"> <span id="lbl-b3">Audiobook</span></label>
                </div>
            </div>
            <div class="rev-right">
                <input type="text" id="rev-title" class="rev-input" placeholder="TITRE">
                <input type="text" id="rev-author" class="rev-input" placeholder="AUTEUR">
                <div class="rev-stars" id="stars-main" onclick="setStars(event, 'main')">☆☆☆☆☆</div>
                <textarea id="rev-opinion" class="rev-input" style="height:80px; margin-top:15px; border:1px solid #eee; padding:5px;" placeholder="TON AVIS..."></textarea>
                <div style="font-size:11px; font-weight:bold; margin-top:10px;" id="txt-rating">NOTE DÉTAILLÉE :</div>
                <div style="display:grid; grid-template-columns: 1fr 1fr; font-size:11px; margin-top:10px;">
                    <span>Style:</span> <div class="rev-stars" style="font-size:15px" onclick="setStars(event, 'style')">☆☆☆☆☆</div>
                    <span>Contenu:</span> <div class="rev-stars" style="font-size:15px" onclick="setStars(event, 'content')">☆☆☆☆☆</div>
                </div>
                <button onclick="closeModals()" style="width:100%; margin-top:20px; padding:10px; background:black; color:white; border:none; cursor:pointer;">OK</button>
            </div>
        </div>
    </div>

    <script>
        let data = JSON.parse(localStorage.getItem('soma_final_db')) || {
            lang: 'FR', name: '', coverImg: '', 
            review: { img: '', title: '', author: '', opinion: '', stars: [0,0,0], types: [false, false, false] },
            pages: [{ content: 'Commence ici...', color: '#E1E3E3' }],
            playlist: ''
        };

        let currentIdx = 0;

        function openBook() { document.getElementById('cover').classList.add('opened'); render(); }
        function setLang(l) { 
            data.lang = l; 
            document.getElementById('txt-prev').textContent = l === 'FR' ? '← Revenir' : '← Back';
            document.getElementById('txt-next').textContent = l === 'FR' ? 'Tourner la page →' : 'Turn page →';
            document.getElementById('lbl-b1').textContent = l === 'FR' ? 'Livre' : 'Book';
            document.getElementById('lbl-b2').textContent = l === 'FR' ? 'E-Book' : 'E-Book';
            document.getElementById('lbl-b3').textContent = l === 'FR' ? 'Audiobook' : 'Audiobook';
            document.getElementById('txt-rating').textContent = l === 'FR' ? 'NOTE DÉTAILLÉE :' : 'DETAILED RATING :';
            saveData();
        }

        function handleImage(input, type) {
            const reader = new FileReader();
            reader.onload = e => {
                if(type === 'cover') {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    data.coverImg = e.target.result;
                } else {
                    document.getElementById('rev-img-display').style.backgroundImage = `url(${e.target.result})`;
                    document.getElementById('rev-img-display').textContent = '';
                    data.review.img = e.target.result;
                }
                saveData();
            };
            reader.readAsDataURL(input.files[0]);
        }

        function setStars(e, type) {
            const rect = e.currentTarget.getBoundingClientRect();
            const count = Math.ceil(((e.clientX - rect.left) / rect.width) * 5);
            const starsStr = "★".repeat(count) + "☆".repeat(5 - count);
            e.currentTarget.innerHTML = `<span class="active">${"★".repeat(count)}</span>${"☆".repeat(5-count)}`;
            if(type === 'main') data.review.stars[0] = count;
            if(type === 'style') data.review.stars[1] = count;
            if(type === 'content') data.review.stars[2] = count;
            saveData();
        }

        function render() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = '';
            data.pages.forEach((p, i) => {
                const div = document.createElement('div');
                div.className = "page-surface paper-lined";
                div.contentEditable = true;
                div.innerHTML = p.content;
                div.oninput = () => { data.pages[i].content = div.innerHTML; saveData(); };
                slider.appendChild(div);
            });
            slider.style.transform = `translateX(-${currentIdx * 100}vw)`;

            const tabs = document.getElementById('tabs-container');
            tabs.innerHTML = '';
            data.pages.forEach((p, i) => {
                const t = document.createElement('div');
                t.className = `tab ${i < currentIdx ? 'hidden-left' : ''}`;
                t.style.background = p.color;
                t.textContent = i + 1;
                t.onclick = () => { currentIdx = i; render(); };
                tabs.appendChild(t);
            });
        }

        function nextPage() {
            if(currentIdx < data.pages.length - 1) currentIdx++;
            else data.pages.push({ content: '', color: '#'+Math.floor(Math.random()*16777215).toString(16) });
            render(); saveData();
        }

        function prevPage() {
            if(currentIdx > 0) currentIdx--;
            else document.getElementById('cover').classList.remove('opened');
            render();
        }

        function loadPlaylist(url) {
            const display = document.getElementById('plDisplay');
            if(url.includes('spotify')) {
                const id = url.split('playlist/')[1]?.split('?')[0];
                display.innerHTML = `<iframe src="https://open.spotify.com/embed/playlist/${id}" width="100%" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>`;
            }
            data.playlist = url; saveData();
        }

        function openReview() { document.getElementById('reviewModal').style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal-review').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }
        function saveData() { localStorage.setItem('soma_final_db', JSON.stringify(data)); }
        function resetAll() { if(confirm("RESET TOTAL ?")) { localStorage.clear(); location.reload(); } }

        window.onload = () => {
            if(data.coverImg) document.getElementById('cover').style.backgroundImage = `url(${data.coverImg})`;
            if(data.review.img) { document.getElementById('rev-img-display').style.backgroundImage = `url(${data.review.img})`; document.getElementById('rev-img-display').textContent = ''; }
            document.getElementById('userName').value = data.name || '';
            setLang(data.lang);
            if(data.playlist) loadPlaylist(data.playlist);
            render();
        };
    </script>
</body>
</html>
