        #cover.opened { transform: translateX(-100%); }
        .lang-switch { position: absolute; bottom: 30px; display: flex; gap: 15px; font-size: 12px; font-weight: bold; cursor: pointer; letter-spacing: 2px; }

        /* ONGLETS */
        #tabs-container { position: absolute; right: 0; top: 60px; display: flex; flex-direction: column; gap: 2px; z-index: 2; }
        .tab { width: 45px; height: 50px; border-radius: 8px 0 0 8px; cursor: pointer; transition: 0.4s; display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: bold; box-shadow: -2px 2px 5px rgba(0,0,0,0.1); }
        .tab.hidden-left { transform: translateX(60px); opacity: 0; pointer-events: none; }

        /* PAGES SLIDER */
        #pages-slider { width: 100%; height: 100%; display: flex; transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
        .page-surface { min-width: 100vw; height: 100vh; box-sizing: border-box; padding: 100px 15% 40px 15%; position: relative; outline: none; overflow-y: auto; }

        /* NAVIGATION */
        .nav-zone { position: absolute; top: 0; bottom: 0; width: 100px; display: flex; align-items: center; justify-content: center; z-index: 100; cursor: pointer; transition: 0.3s; writing-mode: vertical-rl; text-transform: uppercase; font-size: 10px; letter-spacing: 4px; opacity: 0.2; }
        .nav-zone:hover { opacity: 0.8; }
        .nav-next { right: 0; }
        .nav-prev { left: 0; transform: rotate(180deg); }

        /* BARRE D'OUTILS */
        .toolbar-top { position: absolute; top: 25px; right: 60px; display: flex; gap: 20px; z-index: 1100; }
        .tool-icon { cursor: pointer; opacity: 0.6; transition: 0.3s; }
        .tool-icon svg { width: 22px; height: 22px; }

        /* MODAL REVIEW (L'IMAGE QUE TU AS FOURNIE) */
        .modal-review { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 30px; border-radius: 10px; z-index: 10001; width: 80%; max-width: 700px; box-shadow: 0 20px 60px rgba(0,0,0,0.2); font-family: 'Inter', sans-serif; }
        .review-layout { display: grid; grid-template-columns: 1fr 1.5fr; gap: 30px; }
        .rev-photo { width: 100%; aspect-ratio: 3/4; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; cursor: pointer; background-size: cover; background-position: center; font-size: 12px; color: #999; }
        .rev-stars { font-size: 24px; cursor: pointer; color: #ddd; }
        .rev-stars span.active { color: #f1c40f; }
        .rev-input { border: none; border-bottom: 1px solid #eee; width: 100%; padding: 8px 0; margin-bottom: 15px; outline: none; font-family: inherit; }
        
        /* PLAYLIST WIDGET */
        #playlist-widget { position: absolute; bottom: 20px; left: 20px; z-index: 1100; width: 200px; background: rgba(255,255,255,0.8); padding: 10px; border-radius: 8px; backdrop-filter: blur(5px); }
        #playlist-widget input { width: 100%; border: 1px solid #ddd; font-size: 10px; padding: 4px; border-radius: 4px; }

        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.3); z-index: 10000; }
        
        /* PAPIERS */
        .paper-lined { background-image: repeating-linear-gradient(transparent 0px, transparent 31px, #eee 32px); }
