        }
        .imessage-header { display: flex; justify-content: space-between; font-size: 10px; font-weight: 700; color: #666; margin-bottom: 4px; text-transform: uppercase; }
        .imessage-body { font-size: 12px; color: #000; line-height: 1.3; }
        @keyframes slideIn { from { transform: translateY(-20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        /* VELIN SYSTEM */
        .velin-container {
            position: absolute; inset: 0; z-index: 500;
