<script>
function update() {
    const n = new Date();
    document.getElementById('h').innerText = String(n.getHours()).padStart(2,'0');
    document.getElementById('m').innerText = String(n.getMinutes()).padStart(2,'0');
    document.getElementById('s').innerText = String(n.getSeconds()).padStart(2,'0');
}
function changeColor(b, t) {
    document.documentElement.style.setProperty('--widget-bg', b);
    document.documentElement.style.setProperty('--widget-text', t);
}
setInterval(update, 1000);
update();
</script>
</body>
