    <div class="palette">
        <div class="color-dot" style="background:#e7def6;" onclick="changeColor('#e7def6', '#4b4453')"></div>
        <div class="color-dot" style="background:#fbe4d8;" onclick="changeColor('#fbe4d8', '#6b544a')"></div>
        <div class="color-dot" style="background:#e2f3e8;" onclick="changeColor('#e2f3e8', '#4a6b58')"></div>
        <div class="color-dot" style="background:#d8e8fb;" onclick="changeColor('#d8e8fb', '#4a5b6b')"></div>
    </div>
    <div class="credit">Design — Sōma</div>
