        .btn-opt { width: 100%; padding: 12px; margin-bottom: 8px; border: 1px solid #eee; background: #fff; border-radius: 10px; cursor: pointer; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .btn-opt:hover { background: #f9f9f9; }

        /* --- WIDGET STRUCTURE COMPL√àTE --- */
        .review-card {
            border: 1px solid #333; padding: 25px; background: #fff; max-width: 850px;
            margin: 20px auto; color: var(--review-text); text-align: left; pointer-events: auto;
            display: flex; flex-direction: column; gap: 20px;
        }
        .rev-top-section { display: grid; grid-template-columns: 180px 1fr; gap: 30px; }
        .rev-photo-box { width: 180px; height: 260px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #999; cursor: pointer; background-size: cover; background-position: center; }
        
        .rev-form-grid { display: flex; flex-direction: column; gap: 10px; }
        .rev-field { border-bottom: 1px solid #eee; display: flex; align-items: baseline; gap: 10px; padding: 5px 0; }
        .rev-label { font-size: 10px; font-weight: 800; text-transform: uppercase; letter-spacing: 1px; min-width: 80px; }
        .rev-input { border: none; outline: none; flex: 1; font-family: 'Inter'; font-size: 13px; background: transparent; }
        
        .rev-rating-area { margin-top: 10px; cursor: pointer; font-size: 22px; user-select: none; }
        .rev-rating-area span.active { color: #f1c40f; }

        .rev-bottom-section { display: grid; grid-template-columns: 2fr 1fr; gap: 30px; }
        .rev-block { border: 1px solid #eee; padding: 15px; min-height: 120px; position: relative; }
