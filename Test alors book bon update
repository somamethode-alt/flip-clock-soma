        .rev-content { outline: none; font-size: 13px; line-height: 1.6; }

        /* Menu flottant Rating */
        #ratingSwitcher { display: none; position: fixed; background: white; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.2); z-index: 20000; padding: 10px; }
