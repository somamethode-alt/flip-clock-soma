<body>
    <div class="grain"></div>
    <div id="overlay" onclick="closeModals()"></div>

    <div id="book-wrapper">
        <div class="toolbar-top">
            <div class="tool-icon" onclick="openModal('reviewPopup')" title="Review">
                <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
            </div>
            <div class="tool-icon" onclick="document.getElementById('imgUpload').click()" title="Image de couverture">
                <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
            </div>
            <div class="tool-icon" onclick="openModal('paperModal')" title="Style de papier">
                <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/></svg>
            </div>
            <div class="tool-icon" onclick="openModal('colorModal')" title="Couleurs">
                <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/></svg>
            </div>
            <div class="tool-icon" onclick="resetCurrentPage()" title="Effacer la page">
                <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
            </div>
        </div>

        <input type="file" id="imgUpload" hidden onchange="handleImage(this)">
        <div id="tabs-container"></div>

        <div id="cover" onclick="openBook()">
            <div style="font-family: 'Playfair Display', serif; font-size: 60px; letter-spacing: 5px;">Sōma Book</div>
            <div onclick="event.stopPropagation()">
                <input type="text" id="userName" placeholder="PRÉNOM ET NOM" style="border:none; border-bottom:2px solid #000; text-align: center; font-size: 18px; width: 350px; background: transparent; letter-spacing: 5px; text-transform: uppercase; outline:none;">
            </div>
            <div style="font-size: 32px; letter-spacing: 15px; font-weight: 300;">SŌMA</div>
        </div>

        <div class="nav-zone nav-prev" onclick="prevPage()">← Revenir</div>
        <div class="nav-zone nav-next" onclick="nextPage()">Tourner la page →</div>

        <div id="pages-slider"></div>
    </div>

    <div id="reviewPopup" class="modal">
        <p style="font-size: 11px; font-weight: bold; margin-bottom: 15px;">MENU</p>
        <button class="btn-opt" onclick="insertReviewTemplate()">REVIEW</button>
        <button class="btn-opt" style="color:red;" onclick="closeModals()">Fermer</button>
    </div>

    <div id="paperModal" class="modal">
        <p style="font-size: 11px; font-weight: bold; margin-bottom: 15px;">STYLE DE PAPIER</p>
        <button class="btn-opt" onclick="changePaper('paper-lined')">Ligné</button>
        <button class="btn-opt" onclick="changePaper('paper-grid')">Quadrillé</button>
        <button class="btn-opt" onclick="changePaper('paper-dots')">Pointillés</button>
        <button class="btn-opt" onclick="changePaper('paper-blank')">Uni</button>
    </div>

    <div id="colorModal" class="modal">
        <p style="font-size: 11px; font-weight: bold; margin-bottom: 10px;">PERSONNALISATION</p>
        <div style="display: flex; gap: 5px; margin-bottom: 10px;">
            <button class="btn-opt" style="font-size: 9px;" onclick="targetColor='tab'">Onglet</button>
            <button class="btn-opt" style="font-size: 9px;" onclick="targetColor='cover'">Couv.</button>
            <button class="btn-opt" style="font-size: 9px;" onclick="targetColor='paper'">Papier</button>
        </div>
        <div class="palette-grid" id="paletteGrid"></div>
    </div>

    <script>
        const colors = ["#FDFBF7","#E1E3E3","#DFD8D5","#D8D5D2","#E6D4C4","#BAB1B0","#898684","#F2F8F8","#C3CED1","#B1A6A6","#B0AEB4","#A2A09A","#6F6869","#E8E7E7","#EEE9E9","#D5C7B3","#E2D7D4","#B0A19F","#C09D89","#D0CFCD","#E9F0F0","#E4DDD4","#B1B6AF","#D7D8D2","#B6AD9E","#DFE5E5","#E4E9EC","#B8BFBA","#8F877F","#859A9E","#BDD2E0","#F8FCFD","#E9EDEE","#CFCFD4","#E2DFD7","#E2D5D5","#DED0C7","#F6F2F0","#D4C1BA","#D0C9CB","#C1B2B1"];
        
        let tabsData = JSON.parse(localStorage.getItem('soma_v4')) || [
            { color: "#E1E3E3", content: "Page 1", paper: "paper-lined", paperColor: "#ffffff" }
        ];
        let currentIdx = 0;
        let targetColor = 'tab';

        function openBook() { 
            document.getElementById('cover').classList.add('opened'); 
            initBook();
        }

        function initBook() {
            renderPages();
            updateNavigation();
        }

        function renderPages() {
            const slider = document.getElementById('pages-slider');
            slider.innerHTML = "";
            tabsData.forEach((page, i) => {
                const div = document.createElement('div');
                div.className = `page-surface ${page.paper}`;
                div.style.backgroundColor = page.paperColor || "#ffffff";
                div.contentEditable = true;
                div.innerHTML = page.content;
                div.oninput = () => { tabsData[i].content = div.innerHTML; save(); };
                slider.appendChild(div);
            });

            const container = document.getElementById('tabs-container');
            container.innerHTML = "";
            tabsData.forEach((t, i) => {
                const el = document.createElement("div");
                el.className = "tab";
                el.style.background = t.color;
                el.textContent = i + 1;
                el.onclick = () => goToPage(i);
                container.appendChild(el);
            });
        }

        function insertReviewTemplate() {
            // Insère l'image template à l'endroit du curseur ou au début
            const reviewHtml = `<img src="https://i.ibb.co/v4mK9zS/review-template.png" class="review-img"><br><p>Titre: </p><p>Auteur: </p>`;
            // Note : Remplace l'URL src par l'URL réelle de ton image 1
            const pages = document.querySelectorAll('.page-surface');
            pages[currentIdx].innerHTML = reviewHtml + pages[currentIdx].innerHTML;
            tabsData[currentIdx].content = pages[currentIdx].innerHTML;
            save();
            closeModals();
        }

        function updateNavigation() {
            document.getElementById('pages-slider').style.transform = `translateX(-${currentIdx * 100}vw)`;
            const allTabs = document.querySelectorAll('.tab');
            allTabs.forEach((tab, i) => {
                if (i < currentIdx) tab.classList.add('hidden-left');
                else tab.classList.remove('hidden-left');
            });
        }

        function nextPage() {
            if (currentIdx < tabsData.length - 1) {
                currentIdx++;
            } else {
                tabsData.push({ color: colors[Math.floor(Math.random()*colors.length)], content: "", paper: "paper-lined", paperColor: tabsData[currentIdx].paperColor });
                renderPages();
                currentIdx++;
            }
            updateNavigation();
            save();
        }

        function prevPage() {
            if (currentIdx > 0) {
                currentIdx--;
                updateNavigation();
            } else {
                document.getElementById('cover').classList.remove('opened');
            }
        }

        function goToPage(i) { currentIdx = i; updateNavigation(); }

        function changePaper(style) {
            tabsData[currentIdx].paper = style;
            renderPages();
            closeModals();
            save();
        }

        function resetCurrentPage() {
            if(confirm("Vider cette page ?")) {
                tabsData[currentIdx].content = "";
                renderPages();
                save();
            }
        }

        function openModal(id) { document.getElementById(id).style.display='block'; document.getElementById('overlay').style.display='block'; }
        function closeModals() { document.querySelectorAll('.modal').forEach(m=>m.style.display='none'); document.getElementById('overlay').style.display='none'; }

        const grid = document.getElementById('paletteGrid');
        colors.forEach(c => {
            const d = document.createElement('div');
            d.className = 'color-dot'; d.style.background = c;
            d.onclick = () => {
                if(targetColor === 'cover') {
                    document.getElementById('cover').style.backgroundColor = c;
                    document.getElementById('cover').style.backgroundImage = 'none';
                    localStorage.setItem('soma_c_bg', c);
                } else if(targetColor === 'paper') {
                    tabsData[currentIdx].paperColor = c;
                    renderPages();
                } else {
                    tabsData[currentIdx].color = c;
                    renderPages();
                }
                closeModals();
                save();
            };
            grid.appendChild(d);
        });

        function handleImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    document.getElementById('cover').style.backgroundImage = `url(${e.target.result})`;
                    localStorage.setItem('soma_c_img', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function save() { 
            localStorage.setItem('soma_v4', JSON.stringify(tabsData)); 
            localStorage.setItem('soma_user', document.getElementById('userName').value);
        }

        window.onload = () => {
            const author = localStorage.getItem('soma_user');
            if(author) document.getElementById('userName').value = author;
            const img = localStorage.getItem('soma_c_img');
            if(img) document.getElementById('cover').style.backgroundImage = `url(${img})`;
            const col = localStorage.getItem('soma_c_bg');
            if(col) document.getElementById('cover').style.backgroundColor = col;
            initBook();
        };
    </script>
</body>
</html>
