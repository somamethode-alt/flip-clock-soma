            box-shadow: -2px 2px 5px rgba(0,0,0,0.1);
        }
        .tab.hidden-left { transform: translateX(60px); opacity: 0; pointer-events: none; }

        /* --- PAGES --- */
        #pages-slider {
            width: 100%; height: 100%;
            display: flex; transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .page-surface {
            min-width: 100vw; height: 100vh;
            box-sizing: border-box; padding: 100px 15% 40px 15%;
