            writing-mode: vertical-rl; text-transform: uppercase; font-size: 10px;
            letter-spacing: 4px; font-weight: 600; opacity: 0.2;
        }
        .nav-zone:hover { opacity: 0.8; background: rgba(0,0,0,0.02); }
        .nav-next { right: 0; }
        .nav-prev { left: 0; transform: rotate(180deg); }

        /* --- TOOLBAR --- */
        .toolbar-top {
            position: absolute; top: 25px; right: 60px;
            display: flex; gap: 25px; z-index: 1100;
        }
        .tool-icon { cursor: pointer; opacity: 0.6; transition: 0.3s; }
        .tool-icon:hover { opacity: 1; transform: scale(1.1); }
        .tool-icon svg { width: 24px; height: 24px; stroke: #333; }

        /* --- PAPIERS --- */
        .paper-lined { background-image: repeating-linear-gradient(transparent 0px, transparent 31px, rgba(0,0,0,0.05) 32px); }
        .paper-grid { background-image: linear-gradient(rgba(0,0,0,0.05) 1px, transparent 1px), linear-gradient(90deg,rgba(0,0,0,0.05) 1px, transparent 1px); background-size:30px 30px; }
        .paper-dots { background-image: radial-gradient(rgba(0,0,0,0.1) 1px, transparent 1px); background-size:25px 25px; }

        /* --- MODALS --- */
        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 25px; border-radius: 20px; z-index: 10001; width: 320px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.2); z-index: 10000; backdrop-filter: blur(4px); }
        .palette-grid { display: grid; grid-template-columns: repeat(8, 1fr); gap: 5px; margin-top: 15px; }
        .color-dot { width: 100%; aspect-ratio: 1; border-radius: 4px; cursor: pointer; border: 1px solid rgba(0,0,0,0.05); }
        .btn-opt { width: 100%; padding: 12px; margin-bottom: 8px; border: 1px solid #eee; background: #fff; border-radius: 10px; cursor: pointer; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .btn-opt:hover { background: #f9f9f9; }

        /* --- REVIEW CONTENT --- */
        .review-img { max-width: 100%; display: block; margin: 0 auto; pointer-events: none; }
